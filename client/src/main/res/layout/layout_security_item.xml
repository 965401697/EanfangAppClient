<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_12"
    android:layout_marginRight="@dimen/dimen_12"
    android:background="@drawable/bg_worker_home_datastics_back"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_18"
    android:paddingTop="@dimen/dimen_26">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_34"
        android:paddingRight="@dimen/dimen_34">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_seucrity_header"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    app:placeholderImage="@mipmap/ic_nodata"
                    fresco:roundAsCircle="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_24"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_15" />

                        <TextView
                            android:id="@+id/tv_friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_14"
                            android:text="(好友)"
                            android:textColor="@color/color_bottom"
                            android:textSize="@dimen/textSize_12"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/iv_certifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_16"
                            android:src="@mipmap/ic_security_ceritifi"
                            android:visibility="gone" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_14"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_isFocus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_add_staff_name"
                android:paddingBottom="@dimen/dimen_16"
                android:paddingLeft="@dimen/dimen_24"
                android:paddingRight="@dimen/dimen_24"
                android:paddingTop="@dimen/dimen_16"
                android:text="+关注"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_12"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_15" />

        <com.eanfang.witget.CustomLinearLayout
            android:id="@+id/ll_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:orientation="horizontal">

            <com.photopicker.com.widget.BGASortableNinePhotoLayout
                android:id="@+id/snpl_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bga_npl_itemCornerRadius="@dimen/dimen_10"
                app:bga_snpl_plusEnable="false"
                app:bga_snpl_sortable="false"
                app:bga_npl_itemSpanCount="3"
                app:bga_snpl_maxItemCount="9"
                app:bga_snpl_editable="false"
                app:bga_npl_itemWhiteSpacing="@dimen/dimen_32"
                app:bga_npl_showAsLargeWhenOnlyOne="false" />
        </com.eanfang.witget.CustomLinearLayout>

        <LinearLayout
            android:id="@+id/ll_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_34"
            android:background="@drawable/bg_security_comment_list"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/dimen_26">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专家问答："
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_12" />

            <TextView
                android:id="@+id/tv_question_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_12" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读量："
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:id="@+id/tv_readCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_12" />


        </RelativeLayout>
    </LinearLayout>


    <View
        style="@style/style_common_line_gray"
        android:layout_marginTop="@dimen/dimen_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_22"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_34"
        android:paddingRight="@dimen/dimen_34">

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_worker_security_like_unpressed" />

            <TextView
                android:id="@+id/tv_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:textColor="@color/color_home_security_like"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_comments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_80"
            android:layout_toRightOf="@id/ll_like"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_worker_security_comment" />

            <TextView
                android:id="@+id/tv_comments_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:textColor="@color/color_client_neworder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_80"
            android:layout_toRightOf="@id/ll_comments"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_worker_security_share" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
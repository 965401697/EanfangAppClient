<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_550"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_client_contact_create"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tl_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_50"
        android:paddingTop="@dimen/dimen_10">

        <ImageView
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_contact_create_close" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="创建团队"
        android:textColor="@color/color_client_neworder"
        android:textSize="@dimen/textSize_15" />

    <LinearLayout
        android:layout_width="@dimen/dimen_350"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_60"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_input_company"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_70"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入公司名"
            android:textColor="@color/black"
            android:textColorHint="@color/color_bottom"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@color/color_contact_create_line" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_50"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/dimen_180"
            android:layout_height="@dimen/dimen_60"
            android:layout_margin="20dp"
            android:background="@drawable/bg_contact_create_cancel"
            android:gravity="center"
            android:padding="5dp"
            android:text="取消"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="@dimen/dimen_180"
            android:layout_height="@dimen/dimen_60"
            android:layout_margin="20dp"
            android:background="@drawable/bg_contact_create_confim"
            android:gravity="center"
            android:padding="5dp"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_13" />

    </LinearLayout>

</LinearLayout>
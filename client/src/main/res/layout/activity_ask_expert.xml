<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
   >

    <include layout="@layout/header" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_280"
                    android:background="@mipmap/ask_expert_bg">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_expert_header"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="@dimen/dimen_100"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_40"
                        fresco:placeholderImage="@mipmap/ic_header"
                        fresco:roundAsCircle="true" />

                    <TextView
                        android:id="@+id/tv_expert_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_expert_type"
                        android:layout_marginLeft="@dimen/dimen_40"
                        android:layout_toRightOf="@+id/iv_expert_header"
                        android:text="郭小庄"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_15" />


                    <TextView
                        android:id="@+id/tv_line_status"
                        android:layout_width="@dimen/dimen_110"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/tv_expert_name"
                        android:layout_marginRight="@dimen/dimen_40"
                        android:background="@drawable/shape_expert_ask"
                        android:gravity="center"
                        android:text="在线"
                        android:textColor="#FB5B3B"
                        android:textSize="@dimen/textSize_12" />

                    <TextView
                        android:id="@+id/tv_expert_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_toRightOf="@+id/iv_expert_header"
                        android:text="防盗报警专家"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_expert_type"
                        android:layout_marginBottom="@dimen/dimen_40"
                        android:layout_marginLeft="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_toRightOf="@+id/iv_expert_header"
                        android:text="建造师一级"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_13" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_80">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/dimen_30"
                            android:layout_height="@dimen/dimen_30"
                            android:src="@mipmap/ic_ask_good" />

                        <TextView
                            android:id="@+id/ll_good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:gravity="center"
                            android:text="好评率：89%"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSize_13" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/dimen_30"
                            android:layout_height="@dimen/dimen_30"
                            android:src="@mipmap/ic_ask_answer" />

                        <TextView
                            android:id="@+id/ll_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:gravity="center"
                            android:text="回答：13"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSize_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/dimen_30"
                            android:layout_height="@dimen/dimen_30"
                            android:src="@mipmap/ic_ask_answer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:gravity="center"
                            android:text="10元/次"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSize_13" />
                    </LinearLayout>

                </LinearLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_2"
                    android:background="@color/color_new_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_30"
                        android:layout_marginLeft="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:text="基本介绍"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_14" />

                    <TextView
                        android:id="@+id/tv_major"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_40"
                        android:text="擅长专业：无限报警"
                        android:textSize="@dimen/textSize_12" />

                    <TextView
                        android:id="@+id/tv_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="擅长品牌：海康威视"
                        android:textSize="@dimen/textSize_12" />

                    <TextView
                        android:id="@+id/tv_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="专家介绍：特别棒"
                        android:textSize="@dimen/textSize_12" />

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_40"
                        android:layout_marginLeft="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:text="就职单位：浙江海康威视技术有限公司"
                        android:textSize="@dimen/textSize_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/num_zyr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dimen_30"
                    android:paddingLeft="@dimen/dimen_40"
                    android:paddingTop="@dimen/dimen_30"
                    android:text="用户评价（10000）"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_14" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white" />
                    <TextView
                        android:id="@+id/tv_no_datas"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@color/white"
                        android:text="暂时没有数据"
                        android:visibility="gone" />
                </FrameLayout>


                <TextView
                    android:id="@+id/tv_ask_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/dimen_20"
                    android:background="@mipmap/ic_next_background"
                    android:gravity="center"
                    android:padding="@dimen/dimen_30"
                    android:text="马上提问"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>



        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

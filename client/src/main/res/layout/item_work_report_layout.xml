<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_ll_selctor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="小破孩"
            android:textColor="#0000ff"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_read_ns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/select_worker"
            android:gravity="center"
            android:padding="5dp"
            android:text="已读" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#87ceeb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            fresco:placeholderImage="@mipmap/ic_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_depart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门："
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型："
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_pub_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总结人："
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_rev_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收人："
                android:visibility="gone"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_pub_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交时间："
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
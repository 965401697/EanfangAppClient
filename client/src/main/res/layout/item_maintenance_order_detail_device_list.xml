<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ll_selctor"
    android:orientation="vertical">

    <View style="@style/style_common_line_gray" />

    <TextView
        android:id="@+id/tv_os_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_34"
        android:layout_marginTop="@dimen/dimen_34"
        android:paddingLeft="@dimen/dimen_38"
        android:paddingRight="@dimen/dimen_22"
        android:text="电视模拟枪机"
        android:textColor="@color/color_order_list_price"
        android:textSize="@dimen/textSize_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_38"
        android:paddingRight="@dimen/dimen_22">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="品牌"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="型号"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="数字"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_position_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_34"
            android:text="位置编号"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_34"
            android:text="安装位置："
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_13" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/header" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/ll_faultDeviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备名称"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_faultDeviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_icon_right" />
            </LinearLayout>

            <View style="@style/style_common_line_gray" />

            <LinearLayout
                android:id="@+id/ll_deviceBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌型号"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_deviceBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_36"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ic_icon_right" />
            </LinearLayout>

            <View style="@style/style_common_line_gray" />

            <LinearLayout
                android:id="@+id/ll_faultInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="故障简述"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_faultInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_36"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:src="@mipmap/ic_icon_right" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_260"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_30"
                android:text="故障简述"
                android:textColor="@color/color_client_data_item_title"
                android:textSize="@dimen/textSize_15" />

            <View style="@style/style_common_line_gray" />

            <EditText
                android:id="@+id/et_input_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_30"
                android:background="@null"
                android:hint="请输入简要说明"
                android:textSize="@dimen/textSize_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_30"
                android:text="现场照片"
                android:textColor="@color/color_client_data_item_title"
                android:textSize="@dimen/textSize_15" />

            <View style="@style/style_common_line_gray" />

            <com.photopicker.com.widget.BGASortableNinePhotoLayout
                android:id="@+id/snpl_moment_add_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_20"
                app:bga_snpl_deleteDrawable="@mipmap/bga_pp_ic_delete"
                app:bga_snpl_deleteDrawableOverlapQuarter="false"
                app:bga_snpl_editable="true"
                app:bga_snpl_itemCornerRadius="0dp"
                app:bga_snpl_itemSpanCount="3"
                app:bga_snpl_itemWhiteSpacing="4dp"
                app:bga_snpl_itemWidth="0dp"
                app:bga_snpl_maxItemCount="3"
                app:bga_snpl_otherWhiteSpacing="100dp"
                app:bga_snpl_placeholderDrawable="@drawable/bga_pp_ic_holder_dark"
                app:bga_snpl_plusDrawable="@mipmap/bga_pp_ic_plus"
                app:bga_snpl_plusEnable="true"
                app:bga_snpl_sortable="true" />

        </LinearLayout>

    </LinearLayout>




    <TextView
        android:id="@+id/tv_ask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_270"
        android:background="@mipmap/ic_next_background"
        android:gravity="center"
        android:padding="@dimen/dimen_30"
        android:text="我要提问"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_13" />
</RelativeLayout>
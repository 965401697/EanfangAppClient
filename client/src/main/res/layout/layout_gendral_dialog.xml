<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_client_contact_create"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_40"
    android:paddingLeft="@dimen/dimen_60"
    android:paddingRight="@dimen/dimen_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_25"
            android:src="@mipmap/ic_contact_create_close" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_15" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/dimen_170"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_30"
            android:background="@drawable/bg_client_camera_text_back"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_confim"
            android:layout_width="@dimen/dimen_170"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginLeft="@dimen/dimen_30"
            android:background="@drawable/bg_client_camera_text_back_pressed"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>
</LinearLayout>
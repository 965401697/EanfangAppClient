<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_messagedeatil_back"
    android:orientation="vertical"
    tools:context=".ui.activity.worksapce.notice.MessageDetailActivity">

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_50"
        android:paddingLeft="@dimen/dimen_36"
        android:paddingTop="@dimen/dimen_50">
        <!--android:gravity="center_vertical"-->

        <ImageView
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:src="@mipmap/ic_message_notice" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:id="@+id/tv_detailContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_32">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_orderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

        <View style="@style/style_common_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_32">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安防公司："
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

        <View style="@style/style_common_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_32">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="技师："
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

        <View style="@style/style_common_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_32">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完工时间："
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_finishTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40">

        <TextView
            android:id="@+id/tv_detailTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_36"
            android:textColor="@color/color_bottom"
            android:textSize="@dimen/textSize_12" />
    </RelativeLayout>
</LinearLayout>

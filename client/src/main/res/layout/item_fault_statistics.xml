<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_200"
    android:layout_marginBottom="@dimen/dimen_20"
    android:layout_marginLeft="@dimen/dimen_16"
    android:layout_marginRight="@dimen/dimen_16"
    android:layout_marginTop="@dimen/dimen_20"
    android:background="@drawable/shape_fault_statistics">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_classfiy_pic"
            android:layout_width="@dimen/dimen_38"
            android:layout_height="@dimen/dimen_48" />

        <TextView
            android:id="@+id/tv_classfiy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textSize_14"
            android:text="电视监控"
            android:textColor="@color/roll_content"
            android:textSize="@dimen/textSize_13" />

    </LinearLayout>


    <View
        android:layout_width="@dimen/dimen_2"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_50"
        android:layout_marginTop="@dimen/dimen_44"
        android:background="@color/content_bg" />

    <LinearLayout
        android:id="@+id/ll_wait"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wait_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/color_order_list_price"
            android:textSize="@dimen/textSize_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18"
            android:text="待修复"
            android:textColor="@color/color_bottom" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_compelet"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_compelet_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/color_worker_data_item_title"
            android:textSize="@dimen/textSize_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18"
            android:text="修复完成"
            android:textColor="@color/color_bottom" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_down"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_down_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/color_data_number"
            android:textSize="@dimen/textSize_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_18"
            android:text="遗留故障"
            android:textColor="@color/color_bottom" />

    </LinearLayout>

</LinearLayout>
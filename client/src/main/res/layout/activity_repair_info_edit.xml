<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报修单位"
                        android:textColor="@color/color_client_data_item_title"
                        android:textSize="@dimen/textSize_15" />

                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位名称"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <EditText
                        android:id="@+id/et_companyName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_36"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:id="@+id/ll_selectAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所在地区"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dimen_16"
                        android:drawableRight="@mipmap/ic_repair_personalinfo_location"
                        android:gravity="right|center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详细地址"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_addressDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_36"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="标签"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <RadioGroup
                        android:id="@+id/rg_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <RadioButton
                            android:id="@+id/rb_add"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_60"
                            android:background="@drawable/select_client_camera_back"
                            android:button="@null"
                            android:checked="false"
                            android:gravity="center"
                            android:maxLength="5"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/dimen_10"
                            android:paddingRight="@dimen/dimen_10"
                            android:textColor="@drawable/select_client_camera_text_back"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/rb_home"
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="@dimen/dimen_60"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/select_client_camera_back"
                            android:button="@null"
                            android:checked="false"
                            android:gravity="center"
                            android:text="家"
                            android:textColor="@drawable/select_client_camera_text_back"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/rb_company"
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="@dimen/dimen_60"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/select_client_camera_back"
                            android:button="@null"
                            android:checked="false"
                            android:gravity="center"
                            android:text="公司"
                            android:textColor="@drawable/select_client_camera_text_back"
                            android:textSize="12sp" />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@color/color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人信息"
                        android:textColor="@color/color_client_data_item_title"
                        android:textSize="@dimen/textSize_15" />

                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人姓名"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_36"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_36"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入"
                        android:inputType="number"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <RadioGroup
                        android:id="@+id/rg_sex"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_man"
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="@dimen/dimen_60"
                            android:background="@drawable/select_client_camera_back"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="男"
                            android:textColor="@drawable/select_client_camera_text_back"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/rb_woman"
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="@dimen/dimen_60"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/select_client_camera_back"
                            android:button="@null"
                            android:gravity="center"
                            android:text="女"
                            android:textColor="@drawable/select_client_camera_text_back"
                            android:textSize="12sp" />

                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_70"
        android:gravity="center|fill_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginRight="@dimen/dimen_40"
            android:background="@drawable/shape_bg_sure"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_30"
            android:text="保存并使用"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>

</LinearLayout>

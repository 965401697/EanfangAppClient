<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_repair"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_contact_line_gray"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_repair_personalinfo"
                        android:textColor="@color/color_client_data_item_title"
                        android:textSize="@dimen/textSize_15" />

                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_repairCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/et_repairCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入公司名称"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13"
                        android:visibility="gone" />

                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_repairUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />

                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_repairUserPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />

                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="请选择地址"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_selectAdress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_ll_btn"
                        android:drawableLeft="@mipmap/ic_location"
                        android:drawablePadding="@dimen/dimen_10"
                        android:padding="@dimen/dimen_10"
                        android:text="@string/text_repair_selectlocation"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/textSize_12" />

                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ll_selctor"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请填写详细地址"
                        android:padding="15dp"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_repair_contactslinfo"
                        android:textColor="@color/color_client_data_item_title"
                        android:textSize="@dimen/textSize_15" />

                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入联系人姓名"
                        android:padding="15dp"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />

                    <RadioGroup
                        android:id="@+id/rg_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dimen_36"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_man"
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="@dimen/dimen_60"
                            android:background="@drawable/select_client_repair_sex"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="先生"
                            android:textColor="@drawable/select_client_repair_sex_text_back"
                            android:textSize="12sp" />

                        <RadioButton
                            android:id="@+id/rb_woman"
                            android:layout_width="@dimen/dimen_100"
                            android:layout_height="@dimen/dimen_60"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/select_client_repair_sex"
                            android:button="@null"
                            android:gravity="center"
                            android:text="女士"
                            android:textColor="@drawable/select_client_repair_sex_text_back"
                            android:textSize="12sp" />

                    </RadioGroup>
                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入联系人手机号"
                        android:padding="15dp"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />

                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:text="@string/text_repair_arrivetime"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_10"
                        android:drawableRight="@mipmap/ic_arrow_up"
                        android:onClick="onArriveTimeOptionPicker"
                        android:padding="@dimen/dimen_30"
                        android:text="72小时内"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_30">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ic_repair_fault"
                            android:drawablePadding="@dimen/dimen_20"
                            android:text="故障明细"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />

                        <TextView
                            android:id="@+id/tv_faultNum"
                            android:layout_width="@dimen/dimen_36"
                            android:layout_height="@dimen/dimen_36"
                            android:layout_marginLeft="@dimen/dimen_30"
                            android:background="@drawable/bg_repair_fault_num"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_10"
                            android:visibility="gone" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/btn_add_trouble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_ll_btn"
                        android:padding="@dimen/dimen_10"
                        android:text="+   添加故障"
                        android:textColor="#fff"
                        android:textSize="@dimen/textSize_12" />


                </RelativeLayout>


            </LinearLayout>


            <View style="@style/style_common_line_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="@dimen/dimen_10">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:scrollbars="none" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@color/color_white">

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_next_background"
                    android:gravity="center"
                    android:text="@string/text_next"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_13" />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
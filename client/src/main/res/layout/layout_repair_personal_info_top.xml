<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的名字"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_name"
                android:text="(先生)"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:id="@+id/tv_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_14"
                android:layout_toRightOf="@id/tv_sex"
                android:background="#FFFF4621"
                android:paddingBottom="@dimen/dimen_6"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_6"
                android:text="默认"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="15666666"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_15" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_28">

            <TextView
                android:id="@+id/tv_home_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[家]"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_home_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:layout_toRightOf="@id/tv_home_type"
                android:text="我的公司名称"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_28">

            <ImageView
                android:id="@+id/iv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_repair_location" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:layout_toRightOf="@id/iv_address"
                android:text="我的公司名称"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommand_hotnews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_margin_25"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_28"
        android:elevation="10dp"
        android:text="@string/text_new_order"
        android:textColor="@color/color_client_neworder"
        android:textSize="@dimen/textSize_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_170"
        android:layout_marginTop="@dimen/dimen_14"
        android:background="@mipmap/ic_client_home_notice_back"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_20">

        <ImageView
            android:id="@+id/home_recommand_ad_imageleft"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_client_home_notice" />

        <com.eanfang.witget.RollTextView
            android:id="@+id/home_recommand_ad_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="-4dp" />
    </LinearLayout>

</LinearLayout>
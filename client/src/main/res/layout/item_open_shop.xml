<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_20"
    android:layout_marginTop="@dimen/dimen_16"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_18"
    android:paddingLeft="@dimen/dimen_38"
    android:paddingRight="@dimen/dimen_22"
    android:paddingTop="@dimen/dimen_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="北京法安视科技有限公司（刘辉）"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textColor="@color/color_bottom"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>

    <View
        style="@style/style_common_line_gray"
        android:layout_marginTop="@dimen/dimen_28" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号编号：MO20165489375342"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="创建时间："
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_13" />


        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="接收人："
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_preson_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="联系电话："
            android:textColor="@color/color_client_neworder"
            android:textSize="14sp" />


    </LinearLayout>

    <View
        style="@style/style_common_line_gray"
        android:layout_marginTop="@dimen/dimen_34" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_20">


        <TextView
            android:id="@+id/tv_do_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_client_camera_text_back_pressed"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_18"
            android:paddingLeft="@dimen/dimen_32"
            android:paddingRight="@dimen/dimen_32"
            android:paddingTop="@dimen/dimen_18"
            android:text="联系技师"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_12" />


    </RelativeLayout>


</LinearLayout>
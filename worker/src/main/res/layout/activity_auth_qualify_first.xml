<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_contact_line_gray"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_40">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="业务信息"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textSize_15" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="服务区域信息"
                            android:textColor="@color/color_bottom"
                            android:textSize="@dimen/textSize_15" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="资质证书"
                            android:textColor="@color/color_bottom"
                            android:textSize="@dimen/textSize_15" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="提交成功"
                            android:textColor="@color/color_bottom"
                            android:textSize="@dimen/textSize_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/point_1" />

                        <TextView
                            android:layout_width="@dimen/dimen_200"
                            android:layout_height="@dimen/dimen_2"
                            android:layout_gravity="center_vertical"
                            android:background="@color/colorPrimary" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/point_0" />

                        <TextView
                            android:layout_width="@dimen/dimen_150"
                            android:layout_height="@dimen/dimen_2"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:background="#DEDEDE" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/point_0" />

                        <TextView
                            android:layout_width="@dimen/dimen_200"
                            android:layout_height="@dimen/dimen_2"
                            android:layout_gravity="center_vertical"
                            android:background="#DEDEDE" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/point_0" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_time_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimen_20"
                        android:paddingLeft="@dimen/dimen_36"
                        android:paddingRight="@dimen/dimen_34"
                        android:paddingTop="@dimen/dimen_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="从业年限"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />

                        <TextView
                            android:id="@+id/tv_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawablePadding="@dimen/dimen_14"
                            android:drawableRight="@mipmap/arrow_down"
                            android:gravity="right"
                            android:textColor="@color/color_bottom"
                            android:textSize="@dimen/textSize_13" />
                    </LinearLayout>

                    <View style="@style/style_common_line_gray" />

                    <LinearLayout
                        android:id="@+id/ll_ability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimen_20"
                        android:paddingLeft="@dimen/dimen_36"
                        android:paddingRight="@dimen/dimen_34"
                        android:paddingTop="@dimen/dimen_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="能力等级"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />

                        <TextView
                            android:id="@+id/tv_ability"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawablePadding="@dimen/dimen_14"
                            android:drawableRight="@mipmap/arrow_down"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/color_bottom"
                            android:textSize="@dimen/textSize_13" />
                    </LinearLayout>

                    <View style="@style/style_common_line_gray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimen_20"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/dimen_36"
                        android:paddingRight="@dimen/dimen_34"
                        android:paddingTop="@dimen/dimen_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公司类型"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />

                        <RadioGroup
                            android:id="@+id/rg_company_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_26"
                                android:background="@drawable/select_camera_back"
                                android:button="@null"
                                android:checked="true"
                                android:gravity="center"
                                android:padding="@dimen/dimen_10"
                                android:text="安防工程公司"
                                android:textColor="@drawable/select_camera_text_back"
                                android:textSize="12sp" />

                            <RadioButton
                                android:id="@+id/rv_vendor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/select_camera_back"
                                android:button="@null"
                                android:gravity="center"
                                android:padding="@dimen/dimen_10"
                                android:text="设备生产厂商"
                                android:textColor="@drawable/select_camera_text_back"
                                android:textSize="12sp" />
                        </RadioGroup>
                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:padding="@dimen/dimen_30"
                        android:text="选择业务类别"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_14" />

                    <View style="@style/style_common_line_gray" />


                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/tag_business_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:layout_margin="@dimen/dimen_15"
                        android:scrollbars="none"
                        android:clipChildren="false"
                        app:max_select="-1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:padding="@dimen/dimen_30"
                        android:text="选择系统类别"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_14" />

                    <View style="@style/style_common_line_gray" />


                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/tag_system_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:layout_margin="@dimen/dimen_15"
                        android:scrollbars="none"
                        android:clipChildren="false"
                        app:max_select="-1" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_confim"
                android:layout_width="@dimen/dimen_600"
                android:layout_height="@dimen/dimen_88"
                android:layout_margin="@dimen/dimen_30"
                android:layout_gravity="center"
                android:background="@drawable/bg_button_gradation_blue"
                android:gravity="center"
                android:text="去设置服务区域"
                android:textColor="@color/color_white"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
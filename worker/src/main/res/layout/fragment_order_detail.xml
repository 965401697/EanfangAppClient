<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_contact_line_gray"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_30">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/iv_pic"
                        android:layout_width="@dimen/dimen_140"
                        android:layout_height="@dimen/dimen_140"
                        app:placeholderImage="@mipmap/ic_nodata" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_worker_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_client_neworder"
                                android:textSize="@dimen/textSize_15" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_worker_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/color_bottom"
                            android:textSize="@dimen/textSize_13" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dimen_34"
                        android:src="@mipmap/ic_order_detail_call" />
                </LinearLayout>

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_30">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dimen_15"
                                android:paddingTop="@dimen/dimen_15"
                                android:text="单位名称"
                                android:textColor="@color/color_bottom"
                                android:textSize="@dimen/textSize_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dimen_15"
                                android:paddingTop="@dimen/dimen_15"
                                android:text="报修人    "
                                android:textColor="@color/color_bottom"
                                android:textSize="@dimen/textSize_13" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dimen_15"
                                android:paddingTop="@dimen/dimen_15"
                                android:text="手机号"
                                android:textColor="@color/color_bottom"
                                android:textSize="@dimen/textSize_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dimen_15"
                                android:paddingTop="@dimen/dimen_15"
                                android:text="项目名称"
                                android:textColor="@color/color_bottom"
                                android:textSize="@dimen/textSize_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dimen_15"
                                android:paddingTop="@dimen/dimen_15"
                                android:text="报修地址"
                                android:textColor="@color/color_bottom"
                                android:textSize="@dimen/textSize_13" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_company_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:padding="@dimen/dimen_15"
                                android:text=""
                                android:textColor="@color/color_client_neworder"
                                android:textSize="@dimen/textSize_13" />


                            <TextView
                                android:id="@+id/tv_contract_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="@dimen/dimen_15"
                                android:text=""
                                android:textColor="@color/color_client_neworder"
                                android:textSize="@dimen/textSize_13" />

                            <TextView
                                android:id="@+id/tv_contract_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="@dimen/dimen_15"
                                android:text=""
                                android:textColor="@color/color_client_neworder"
                                android:textSize="@dimen/textSize_13" />

                            <TextView
                                android:id="@+id/tv_project_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="@dimen/dimen_15"
                                android:text=""
                                android:textColor="@color/color_client_neworder"
                                android:textSize="@dimen/textSize_13" />


                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="@dimen/dimen_15"
                                android:text=""
                                android:textColor="@color/color_client_neworder"
                                android:textSize="@dimen/textSize_13" />

                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/style_common_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimen_30">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dimen_15"
                                android:paddingTop="@dimen/dimen_15"
                                android:text="现场联系人"
                                android:textColor="@color/color_bottom"
                                android:textSize="@dimen/textSize_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dimen_15"
                                android:paddingTop="@dimen/dimen_15"
                                android:text="手机号"
                                android:textColor="@color/color_bottom"
                                android:textSize="@dimen/textSize_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/dimen_15"
                                android:paddingTop="@dimen/dimen_15"
                                android:text="备注信息"
                                android:textColor="@color/color_bottom"
                                android:textSize="@dimen/textSize_13" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_ll_selctor"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_repairContacts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:padding="@dimen/dimen_15"
                                android:text=""
                                android:textColor="@color/color_client_neworder"
                                android:textSize="@dimen/textSize_13" />

                            <TextView
                                android:id="@+id/tv_repairContactPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:padding="@dimen/dimen_15"
                                android:text=""
                                android:textColor="@color/color_client_neworder"
                                android:textSize="@dimen/textSize_13" />

                            <TextView
                                android:id="@+id/tv_repair_remarkinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:padding="@dimen/dimen_15"
                                android:text=""
                                android:textColor="@color/color_client_neworder"
                                android:textSize="@dimen/textSize_13" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@color/color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_repair_fault"
                        android:drawablePadding="@dimen/dimen_20"
                        android:text="故障明细"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_14" />

                    <TextView
                        android:id="@+id/tv_faultNum"
                        android:layout_width="@dimen/dimen_36"
                        android:layout_height="@dimen/dimen_36"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:background="@drawable/bg_repair_fault_num"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_10"
                        android:visibility="visible" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_15"
                        android:text="订单编号"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dimen_15"
                        android:text=""
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ll_selctor"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_15"
                        android:text="订单时间"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_feature_time"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dimen_15"
                        android:text=""
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/style_common_line_gray" />

            <LinearLayout
                android:id="@+id/ll_orderPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_30"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ll_selctor"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_15"
                        android:text="支付方式"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_payType"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dimen_15"
                        android:text=""
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ll_selctor"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_15"
                        android:text="支付时间"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_payTime"
                        android:layout_width="156dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:padding="@dimen/dimen_15"
                        android:text=""
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_13" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_orderMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:padding="@dimen/dimen_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上门费:"
                        android:textColor="@color/roll_content"
                        android:textSize="@dimen/textSize_13" />


                    <TextView
                        android:id="@+id/tv_doorFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_28"
                        android:text=""
                        android:textColor="@color/roll_content"
                        android:textSize="@dimen/textSize_13" />

                </RelativeLayout>

                <View style="@style/style_common_line_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:padding="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_28"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单金额:"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_50"
                            android:text="￥"
                            android:textColor="@color/color_repair_fault_num"
                            android:textSize="@dimen/textSize_15" />

                        <TextView
                            android:id="@+id/tv_orderAllPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_repair_fault_num"
                            android:textSize="@dimen/textSize_15" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
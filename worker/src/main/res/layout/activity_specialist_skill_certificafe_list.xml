<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_new_line"
    android:orientation="vertical"
    tools:context="net.eanfang.worker.ui.activity.my.certification.CertificateListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/tv_sub"
        android:orientation="vertical">

        <include layout="@layout/header" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200"
            android:background="@color/color_white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_50"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_130"
                    android:text="专业信息"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_13" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_130"
                    android:text="资格信息"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交成功"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/point_3" />


                <TextView
                    android:layout_width="@dimen/dimen_200"
                    android:layout_height="@dimen/dimen_2"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorPrimary" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/point_1" />

                <TextView
                    android:layout_width="@dimen/dimen_200"
                    android:layout_height="@dimen/dimen_2"
                    android:layout_gravity="center_vertical"
                    android:background="#DEDEDE" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/point_0" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120"
            android:background="@color/white"
            android:visibility="gone">


            <TextView
                android:id="@+id/tv_add"
                android:layout_width="@dimen/dimen_340"
                android:layout_height="@dimen/dimen_88"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_add_certificate"
                android:drawableLeft="@mipmap/add"
                android:drawablePadding="@dimen/dimen_14"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_64"
                android:text="添加资格信息"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_15" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专家认定单位:"
                android:textColor="#333333"
                android:textSize="@dimen/textSize_13" />

            <EditText
                android:id="@+id/et_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dimen_20"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_20"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dimen_30"
                android:text="培训认定文件" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_upload2"
                android:layout_width="@dimen/dimen_200"
                android:layout_height="@dimen/dimen_200"
                android:layout_margin="@dimen/dimen_30"
                fresco:placeholderImage="@mipmap/bga_pp_ic_plus" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_20"
        android:background="@drawable/bg_gradual_change_ellipse"
        android:gravity="center"
        android:padding="@dimen/dimen_30"
        android:text="提交认证"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_13"
        android:visibility="visible" />

</RelativeLayout>

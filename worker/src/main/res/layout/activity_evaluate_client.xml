<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="设备熟悉程度"
                android:textColor="@color/font_color"
                android:textSize="16sp" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_star1"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:maxHeight="20dp"
                android:minHeight="20dp"
                android:progressBackgroundTint="@color/font_color"
                android:progressTint="#FFA53A"
                android:rating="5"
                android:secondaryProgressTint="@color/font_color"
                android:stepSize="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="工作协助支持"
                android:textColor="@color/font_color"
                android:textSize="16sp" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_star2"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:maxHeight="20dp"
                android:minHeight="20dp"
                android:progressBackgroundTint="@color/font_color"
                android:progressTint="#FFA53A"
                android:rating="5"
                android:secondaryProgressTint="@color/font_color"
                android:stepSize="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="结算及时"
                android:textColor="@color/font_color"
                android:textSize="16sp" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_star3"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:maxHeight="20dp"
                android:minHeight="20dp"
                android:progressBackgroundTint="@color/font_color"
                android:progressTint="#FFA53A"
                android:rating="5"
                android:secondaryProgressTint="@color/font_color"
                android:stepSize="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="态度热情"
                android:textColor="@color/font_color"
                android:textSize="16sp" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_star4"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:maxHeight="20dp"
                android:minHeight="20dp"
                android:progressBackgroundTint="@color/font_color"
                android:progressTint="#FFA53A"
                android:rating="5"
                android:secondaryProgressTint="@color/font_color"
                android:stepSize="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="现场环境"
                android:textColor="@color/font_color"
                android:textSize="16sp" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rb_star5"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:maxHeight="20dp"
                android:minHeight="20dp"
                android:progressBackgroundTint="@color/font_color"
                android:progressTint="#FFA53A"
                android:rating="5"
                android:secondaryProgressTint="@color/font_color"
                android:stepSize="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ll_btn"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
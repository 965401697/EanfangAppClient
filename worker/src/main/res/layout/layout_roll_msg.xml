<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommand_hotnews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/home_recommand_ad_imageleft"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/contend_ic_systemnotification_default" />

    <com.eanfang.witget.RollTextView
        android:id="@+id/home_recommand_ad_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_recommand_ad_imageleft"
        android:layout_toLeftOf="@id/home_recommand_ad_imageright"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/home_recommand_ad_imageright"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/contend_ic_return_pressed" />

</RelativeLayout>
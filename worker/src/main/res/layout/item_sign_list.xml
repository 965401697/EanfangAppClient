<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_ll_selctor"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_first_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/blue_point"
        android:gravity="center"
        android:padding="5dp"
        android:text="测试"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sign_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/common_ext_color" />

        <TextView
            android:id="@+id/tv_visit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/common_ext_color" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/common_ext_color" />

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/common_ext_color" />

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_pic1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                fresco:placeholderImage="@mipmap/no_img" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_pic2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:visibility="gone"
                fresco:placeholderImage="@mipmap/no_img" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_pic3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:visibility="gone"
                fresco:placeholderImage="@mipmap/no_img" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
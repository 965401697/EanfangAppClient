<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_30">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_faultPic"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_200"
        app:placeholderImage="@mipmap/ic_nodata" />

    <TextView
        android:id="@+id/tv_faultDes"
        android:layout_width="@dimen/dimen_336"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30"
        android:textColor="@color/color_client_neworder"
        android:textSize="@dimen/textSize_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check_true"
            android:layout_width="@dimen/dimen_38"
            android:layout_height="@dimen/dimen_38"
            android:src="@drawable/check_true" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16"
    android:background="@drawable/bg_ll_selctor"
    android:paddingBottom="@dimen/dimen_18"
    android:paddingTop="@dimen/dimen_30">

    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dimen_24"
        android:src="@mipmap/ic_order_finish" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京法安视科技有限公司"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:text="刘辉"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_24"
                android:text="待支付"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

        <View
            style="@style/style_common_line_gray"
            android:layout_marginTop="@dimen/dimen_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_upload"
                android:layout_width="@dimen/dimen_180"
                android:layout_height="@dimen/dimen_170"
                fresco:placeholderImage="@mipmap/ic_nodata" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单单号：MO20165489375342"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:text="下单时间："
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <!--<TextView-->
                <!--android:id="@+id/tv_appointment_time"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="预约：2016-11-11 11:11:11"-->
                <!--android:textColor="@color/font_color"-->
                <!--android:textSize="14sp" />-->
                <TextView
                    android:id="@+id/tv_arriveTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:text="到达时限："
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:text="负责人："
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />


                <!--<TextView-->
                <!--android:id="@+id/tv_phone_solve"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="电话解决："-->
                <!--android:textColor="@color/font_color"-->
                <!--android:textSize="14sp" />-->


            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/style_common_line_gray"
            android:layout_marginTop="@dimen/dimen_30" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22"
            android:paddingTop="@dimen/dimen_20">

            <LinearLayout
                android:id="@+id/ll_orderOrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计："
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_count_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/color_order_list_price"
                    android:textSize="@dimen/textSize_15" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_do_first"
                    android:layout_width="@dimen/dimen_160"
                    android:layout_height="@dimen/dimen_60"
                    android:background="@drawable/select_worker"
                    android:gravity="center"
                    android:text="联系技师"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:id="@+id/tv_do_second"
                    android:layout_width="@dimen/dimen_160"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/select_worker"
                    android:gravity="center"
                    android:text="立即支付"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize_12" />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
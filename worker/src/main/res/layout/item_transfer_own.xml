<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_contact_line_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_128"
        android:paddingRight="10dp">

        <RadioButton
            android:id="@+id/rb_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_36"
            android:layout_centerVertical="true"
            android:visibility="visible" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_friend_header"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            fresco:roundAsCircle="true"
            android:layout_toRightOf="@+id/rb_checked"
            android:layout_marginLeft="@dimen/dimen_36"
            fresco:placeholderImage="@mipmap/ic_header" />


        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_friend_header"
            android:layout_marginLeft="@dimen/dimen_38"
            android:text=" "
            android:textSize="@dimen/textSize_15" />


    </RelativeLayout>


</LinearLayout>
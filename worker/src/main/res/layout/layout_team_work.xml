<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_40"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30"
        android:text="协同办公"
        android:textColor="@color/color_client_neworder"
        android:textSize="@dimen/textSize_16"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_36"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign"
            style="@style/style_client_work_meun"
            android:drawableTop="@mipmap/ic_client_work_sign"
            android:text="@string/text_worker_sign" />

        <TextView
            android:id="@+id/tv_work_report"
            style="@style/style_client_work_meun"
            android:drawableTop="@mipmap/ic_client_work_report"
            android:text="@string/text_work_report" />

        <TextView
            android:id="@+id/tv_work_task"
            style="@style/style_client_work_meun"
            android:drawableTop="@mipmap/ic_client_work_task"
            android:text="@string/text_work_task" />

        <TextView
            android:id="@+id/tv_work_inspect"
            style="@style/style_client_work_meun"
            android:drawableTop="@mipmap/ic_client_work_inspect"
            android:text="@string/text_work_inspect" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_work_point_check"
            style="@style/style_client_work_meun"
            android:onClick="noOpen"
            android:drawableTop="@mipmap/ic_worker_work_create_project"
            android:text="@string/text_worker_point_check" />

        <TextView
            android:id="@+id/tv_work_apply_goods"
            style="@style/style_client_work_meun"
            android:onClick="noOpen"
            android:drawableTop="@mipmap/ic_worker_work_create_project"
            android:text="@string/text_worker_apply_goods" />

        <TextView
            android:id="@+id/tv_work_talk"
            style="@style/style_client_work_meun"
            android:onClick="noOpen"
            android:drawableTop="@mipmap/ic_worker_work_create_project"
            android:text="@string/text_work_talk" />

        <LinearLayout
            android:id="@+id/ll_accept_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" />
    </LinearLayout>


</LinearLayout>
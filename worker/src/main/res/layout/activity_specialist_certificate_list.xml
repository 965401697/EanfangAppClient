<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.eanfang.worker.ui.activity.my.certification.CertificateListActivity">

    <include layout="@layout/header" />

    <RelativeLayout
        android:id="@+id/rl_add"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dimen_222">


        <TextView
            android:id="@+id/tv_add"
            android:layout_width="@dimen/dimen_290"
            android:layout_height="@dimen/dimen_88"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_add_certificate"
            android:drawableLeft="@mipmap/add"
            android:drawablePadding="@dimen/dimen_14"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_64"
            android:text="添加证书"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_15" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_40"
        android:background="@drawable/bg_btn_trouble_detail_add_trouble"
        android:gravity="center"
        android:padding="@dimen/dimen_30"
        android:text="提交"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_14"
        android:visibility="gone" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_18"
    android:paddingTop="@dimen/dimen_30">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_30"
                android:background="@drawable/select_worker"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10"
                android:text="未读"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_worktalk_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="北京法安视（刘辉）"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未读"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

        <View
            style="@style/style_common_line_gray"
            android:layout_marginTop="@dimen/dimen_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号：MO20165489375342"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:text="创建时间："
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_receiver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:text="接收人："
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_telphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="联系电话："
                    android:textColor="@color/color_bottom"
                    android:textSize="14sp"
                    android:visibility="visible" />
                <!--<TextView-->
                <!--android:id="@+id/tv_phone_solve"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="电话解决："-->
                <!--android:textColor="@color/font_color"-->
                <!--android:textSize="14sp" />-->


            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/style_common_line_gray"
            android:layout_marginTop="@dimen/dimen_34" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22"
            android:paddingTop="@dimen/dimen_20">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_seedetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_trouble_detail_add_trouble"
                    android:paddingBottom="@dimen/dimen_18"
                    android:paddingLeft="@dimen/dimen_32"
                    android:paddingRight="@dimen/dimen_32"
                    android:paddingTop="@dimen/dimen_18"
                    android:text="查看详情"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_btn_trouble_detail_add_trouble"
                    android:paddingBottom="@dimen/dimen_18"
                    android:paddingLeft="@dimen/dimen_32"
                    android:paddingRight="@dimen/dimen_32"
                    android:paddingTop="@dimen/dimen_18"
                    android:text="联系汇报人"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_12" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
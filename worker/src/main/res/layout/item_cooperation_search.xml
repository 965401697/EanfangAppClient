<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/cb_checked"
        android:layout_width="@dimen/dimen_42"
        android:layout_height="@dimen/dimen_42"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_36"
        android:background="@drawable/selector_single_checked"
        android:button="@null"  />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_company_logo"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:layout_marginBottom="@dimen/dimen_24"
        android:layout_marginLeft="@dimen/dimen_36"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_toRightOf="@+id/cb_checked"
        fresco:placeholderImage="@mipmap/ic_header"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_38"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_toRightOf="@+id/iv_company_logo"
        android:text=" "
        android:textColor="@color/color_client_neworder"
        android:textSize="@dimen/textSize_15" />

    <TextView
        android:id="@+id/tv_company_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_company_name"
        android:layout_marginBottom="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_38"
        android:layout_toRightOf="@+id/iv_company_logo"
        android:text="  "
        android:textColor="#999999"
        android:textSize="@dimen/textSize_12" />
</RelativeLayout>
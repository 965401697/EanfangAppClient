<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_40"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_seucrity_header"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="@dimen/dimen_80"
                app:placeholderImage="@mipmap/ic_nodata" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王璐"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_15" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="北京市法安视科技有限公司"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_isFocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_worker_camera_text_back_pressed"
            android:paddingBottom="@dimen/dimen_16"
            android:paddingLeft="@dimen/dimen_24"
            android:paddingRight="@dimen/dimen_24"
            android:paddingTop="@dimen/dimen_16"
            android:text="+关注"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30"
        android:text=" 这是文字正文这是文字正文这是文字正文，这是文字正文这是文字正文，这是文字正文这是文字正文。"
        android:textColor="@color/color_client_neworder"
        android:textSize="@dimen/textSize_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40"
        android:gravity="center"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_one"
            android:layout_width="@dimen/dimen_200"
            android:layout_height="@dimen/dimen_200"
            app:placeholderImage="@mipmap/ic_nodata" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_two"
            android:layout_width="@dimen/dimen_200"
            android:layout_height="@dimen/dimen_200"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            app:placeholderImage="@mipmap/ic_nodata" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_three"
            android:layout_width="@dimen/dimen_200"
            android:layout_height="@dimen/dimen_200"
            app:placeholderImage="@mipmap/ic_nodata" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30">

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_worker_security_like_pressed" />

            <TextView
                android:id="@+id/tv_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:text="12"
                android:textColor="@color/color_home_security_like"
                android:textSize="@dimen/textSize_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_80"
            android:layout_toRightOf="@id/ll_like"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_worker_security_comment" />

            <TextView
                android:id="@+id/tv_comments_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:text="t12"
                android:textColor="@color/color_home_security_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_80"
            android:layout_toRightOf="@id/ll_comments"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_worker_security_share" />

            <TextView
                android:id="@+id/tv_share_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:text="t12"
                android:textColor="@color/color_home_security_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="4小时前"
            android:textColor="@color/color_bottom" />
    </RelativeLayout>
</LinearLayout>
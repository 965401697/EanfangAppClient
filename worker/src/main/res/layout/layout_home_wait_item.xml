<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_50">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修订单   MO20181010258475"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30"
            android:background="@drawable/bg_text_home_wait_status"
            android:paddingBottom="@dimen/dimen_10"
            android:paddingLeft="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_10"
            android:text="待上门"
            android:textColor="#FF1833"
            android:textSize="@dimen/textSize_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_50"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户名称："
            android:textColor="@color/color_home_datastatistics"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京家乐福双井店"
            android:textColor="@color/color_home_datastatistics"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_28"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修时间："
            android:textColor="@color/color_home_datastatistics"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-12-12 19:08:28"
            android:textColor="@color/color_home_datastatistics"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_28"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户联系人："
            android:textColor="@color/color_home_datastatistics"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张立新  17600119928"
            android:textColor="@color/color_home_datastatistics"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>
</LinearLayout>
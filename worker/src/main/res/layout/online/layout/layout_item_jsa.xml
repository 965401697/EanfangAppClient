<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        android:background="@color/content_bg" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dimen_168"
        android:layout_height="@dimen/dimen_168"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_50"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dimen_50"
        android:focusable="false"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@mipmap/ic_nodata" />

    <TextView
        android:id="@+id/tv_school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_alignTop="@+id/iv_pic"
        android:layout_marginLeft="@dimen/dimen_28"
        android:text="河南工程学院" />

    <TextView
        android:id="@+id/tv_school_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#333333"
        android:layout_marginLeft="@dimen/dimen_28"
        android:text="河南工程学院" />

    <TextView
        android:id="@+id/tv_school_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_alignBottom="@+id/iv_pic"
        android:layout_marginLeft="@dimen/dimen_28"
        android:text="河南工程学院" />



</RelativeLayout>
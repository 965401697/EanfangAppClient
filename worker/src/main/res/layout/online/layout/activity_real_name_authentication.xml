<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/header" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_idCard_front"
                android:layout_width="@dimen/dimen_400"
                android:layout_height="@dimen/dimen_180"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/dimen_40"
                android:src="@mipmap/worker_logo"
                fresco:placeholderImage="@mipmap/sfzzmiv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="请上传身份证正面"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_idCard_back"
                android:layout_width="@dimen/dimen_400"
                android:layout_height="@dimen/dimen_180"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/dimen_40"
                fresco:placeholderImage="@mipmap/sfzfmiv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="请上传身份证反面"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_idCard_inHand"
                android:layout_width="@dimen/dimen_400"
                android:layout_height="@dimen/dimen_180"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/dimen_40"
                fresco:placeholderImage="@mipmap/shouhciiv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="请上传手持身份证照片"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_40"
        android:layout_marginBottom="@dimen/dimen_20"
        android:background="@drawable/bg_gradual_change_ellipse"
        android:gravity="center"
        android:padding="@dimen/dimen_30"
        android:text="提交"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_14" />


</LinearLayout>
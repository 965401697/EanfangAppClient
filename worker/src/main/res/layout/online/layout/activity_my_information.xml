<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_contact_line_gray"
    tools:context="net.eanfang.worker.ui.activity.worksapce.online.MyInformationActivity">
    <include layout="@layout/header" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_188"
        android:background="@color/color_white">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_company_logo"
            android:layout_width="@dimen/dimen_98"
            android:layout_height="@dimen/dimen_98"
            android:layout_marginLeft="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_44"
            fresco:placeholderImage="@mipmap/ic_header"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_174"
            android:layout_marginTop="@dimen/dimen_50"
            android:textColor="#333333"
            android:text="用户99"
            android:textSize="@dimen/textSize_15"/>

        <TextView
            android:id="@+id/user_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_174"
            android:layout_marginTop="@dimen/dimen_106"
            android:textColor="#788697"
            android:text="粉丝99"
            android:textSize="@dimen/textSize_13"/>

        <TextView
            android:id="@+id/user_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_326"
            android:layout_marginTop="@dimen/dimen_106"
            android:textColor="#788697"
            android:text="关注99"
            android:textSize="@dimen/textSize_13"/>

        <TextView
            android:id="@+id/user_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_486"
            android:layout_marginTop="@dimen/dimen_106"
            android:textColor="#788697"
            android:text="赞99"
            android:textSize="@dimen/textSize_13"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_254"
        android:background="@color/color_white"
        android:layout_marginTop="@dimen/dimen_1"
        android:layout_marginBottom="@dimen/dimen_1">
        <ImageView
            android:layout_width="@dimen/dimen_108"
            android:layout_height="@dimen/dimen_108"
            android:layout_marginTop="@dimen/dimen_44"
            android:layout_marginLeft="@dimen/dimen_40"
            android:src="@drawable/wen"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提问"
            android:textColor="#425062"
            android:layout_marginTop="@dimen/dimen_174"
            android:layout_marginLeft="@dimen/dimen_70"
            android:textSize="@dimen/textSize_12"/>
        <ImageView
            android:layout_width="@dimen/dimen_108"
            android:layout_height="@dimen/dimen_108"
            android:layout_marginTop="@dimen/dimen_44"
            android:layout_marginLeft="@dimen/dimen_218"
            android:src="@drawable/da"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回答"
            android:textColor="#425062"
            android:layout_marginTop="@dimen/dimen_174"
            android:layout_marginLeft="@dimen/dimen_250"
            android:textSize="@dimen/textSize_12"/>
        <ImageView
            android:layout_width="@dimen/dimen_108"
            android:layout_height="@dimen/dimen_108"
            android:layout_marginTop="@dimen/dimen_44"
            android:layout_marginLeft="@dimen/dimen_396"
            android:src="@drawable/shou"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:layout_marginTop="@dimen/dimen_174"
            android:layout_marginLeft="@dimen/dimen_426"
            android:textColor="#425062"
            android:textSize="@dimen/textSize_12"/>
        <ImageView
            android:layout_width="@dimen/dimen_108"
            android:layout_height="@dimen/dimen_108"
            android:layout_marginTop="@dimen/dimen_44"
            android:layout_marginLeft="@dimen/dimen_574"
            android:src="@drawable/ehui"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专家回答"
            android:layout_marginTop="@dimen/dimen_174"
            android:layout_marginLeft="@dimen/dimen_580"
            android:textColor="#425062"
            android:textSize="@dimen/textSize_12"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_86">
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_task_zyr"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            tl:tl_divider_color="#1A000000"
            tl:tl_divider_padding="13dp"
            tl:tl_divider_width="0dp"
            tl:tl_indicator_color="@color/client"
            tl:tl_indicator_height="1.5dp"
            tl:tl_tab_padding="22dp"
            tl:tl_tab_space_equal="true"
            tl:tl_textSelectColor="@color/client"
            tl:tl_textUnselectColor="@color/font_color"
            tl:tl_textsize="16dp"
            tl:tl_underline_color="#1A000000"
            tl:tl_underline_height="1dp"

            />

    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_task_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5" />
</LinearLayout>

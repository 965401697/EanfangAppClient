<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_pressed="false">
        <shape>
            <solid android:color="#3F51B5" />
            <stroke android:width="1dp" android:color="#F44336" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="#45F14C" />
            <stroke android:width="6dp" android:color="#FF9800" />
            <corners android:radius="5dp" />
            <padding android:left="10dp" android:top="7dp" android:right="10dp" android:bottom="7dp" />

        </shape>
    </item>
</selector>
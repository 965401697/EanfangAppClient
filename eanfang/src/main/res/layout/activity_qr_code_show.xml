<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="com.eanfang.ui.activity.QrCodeShowActivity">

    <include layout="@layout/view_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@mipmap/ic_qrcode_back_show"
            android:orientation="vertical"
            android:padding="@dimen/dimen_24">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_30">

                <TextView
                    android:id="@+id/tv_qrcode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_18" />
            </RelativeLayout>

            <View style="@style/style_common_line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_30">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="@dimen/dimen_400"
                    android:layout_height="@dimen/dimen_400"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    app:placeholderImage="@drawable/bga_pp_ic_holder_dark" />

                <TextView
                    android:id="@+id/lj_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_qrcode"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:gravity="center"
                    android:padding="@dimen/dimen_20"
                    android:text="点击复制链接"
                    android:textColor="#03A9F4" />

                <View
                    style="@style/style_common_line_gray"
                    android:layout_marginTop="@dimen/dimen_30" />

                <TextView
                    android:id="@+id/tv_qrcode_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_20"
                    android:text="添加好友"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_save_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:background="@mipmap/ic_qrcode_back_save">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/ic_qrcode_icon_save"
                android:drawablePadding="@dimen/dimen_10"
                android:text="保存到相册"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_15" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

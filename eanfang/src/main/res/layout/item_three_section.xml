<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_96">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_168"
            android:layout_toEndOf="@+id/iv_select"
            android:text="asdfasfd"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_14" />


        <ImageView
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_toLeftOf="@+id/tv_unit"
            android:src="@drawable/ic_all" />


        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_26"
            android:text="部门员工"
            android:textColor="@color/color_client_data_item_title"
            android:textSize="@dimen/textSize_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        android:background="@color/bga_adapter_line"
        android:layout_marginLeft="@dimen/dimen_168" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_96"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/dimen_26"
        android:layout_height="@dimen/dimen_26"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_26"
        android:src="@drawable/ic_one_opne" />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/iv_select"
        android:layout_weight="1"
        android:ellipsize="end"
        android:text="asdfasfd"
        android:textColor="@color/color_client_neworder"
        android:textSize="@dimen/textSize_15" />

    <LinearLayout
        android:id="@+id/ll_staff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_toLeftOf="@+id/tv_unit"
            android:src="@drawable/ic_all" />


        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_26"
            android:text="全部员工"
            android:textColor="@color/color_client_data_item_title"
            android:textSize="@dimen/textSize_12" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_26"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/fl_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/config_black_color"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_arrow_back"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:onClick="backTakePhoto"
            android:text="相机"
            android:textColor="@color/color_white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/showTakePhotoImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_32"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="用户/项目名称(*)"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_15" />

                    <ImageView
                        android:id="@+id/iv_project_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_worker_voice_input" />

                </LinearLayout>


                <EditText
                    android:id="@+id/et_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:background="@drawable/bg_camera_input_back"
                    android:hint="请输入项目/单位名称(30字以内)"
                    android:maxLength="30"
                    android:padding="@dimen/dimen_15"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>

            <TextView
                style="@style/style_common_line_gray"
                android:layout_marginTop="@dimen/dimen_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_32"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="工程部位/区域(*)"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_15" />

                    <ImageView
                        android:id="@+id/iv_area_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_worker_voice_input" />
                </LinearLayout>


                <EditText
                    android:id="@+id/et_region_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_30"
                    android:background="@drawable/bg_camera_input_back"
                    android:hint="请输入部位/区域名称(30字以内)"
                    android:maxLength="30"
                    android:padding="@dimen/dimen_15"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>


            <TextView
                style="@style/style_common_line_gray"
                android:layout_marginTop="@dimen/dimen_30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_32"
                android:background="@drawable/bg_ll_selctor"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="工程内容(*)"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_15" />

                <ImageView
                    android:id="@+id/iv_content_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_worker_voice_input" />


            </LinearLayout>

            <EditText
                android:id="@+id/et_project_conment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_32"
                android:layout_weight="1"
                android:background="@drawable/bg_camera_input_back"
                android:hint="请输入项目内容(30字以内)"
                android:maxLength="30"
                android:padding="@dimen/dimen_15"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_32"
                android:background="@drawable/bg_ll_selctor"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="施工地址"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="(*)"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_select_other_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dimen_14"
                    android:drawableRight="@mipmap/ic_camera_select_otheraddress"
                    android:gravity="right|center_vertical"
                    android:onClick="selectOtherAddress"
                    android:text="选择其他地址"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_12" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_location_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_32"
                android:background="@drawable/bg_camera_input_back"
                android:drawableLeft="@mipmap/ic_camera_location"
                android:drawablePadding="@dimen/dimen_20"
                android:padding="@dimen/dimen_15"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_32"
                android:background="@drawable/bg_camera_input_back"
                android:hint="请手动输入地址"
                android:maxLength="30"
                android:padding="@dimen/dimen_15"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />


            <TextView
                style="@style/style_common_line_gray"
                android:layout_marginTop="@dimen/dimen_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_32"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="字体颜色"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_15" />

                </LinearLayout>


                <RadioGroup
                    android:id="@+id/rg_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dimen_28"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/color_white"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="@dimen/dimen_60"
                        android:background="@drawable/select_camera_back"
                        android:button="@null"
                        android:checked="true"
                        android:text="白色"
                        android:gravity="center"
                        android:textColor="@drawable/select_camera_text_back"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/color_red"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="@dimen/dimen_60"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/select_camera_back"
                        android:button="@null"
                        android:gravity="center"
                        android:text="红色"
                        android:textColor="@drawable/select_camera_text_back"
                        android:textSize="12sp" />

                </RadioGroup>
            </LinearLayout>

            <TextView
                style="@style/style_common_line_gray"
                android:layout_marginTop="@dimen/dimen_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_32"
                android:background="@drawable/bg_ll_selctor"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目类型"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_15" />

                </LinearLayout>


                <com.eanfang.witget.CustomRadioGroup
                    android:id="@+id/rg_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_28"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/tv_repair"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="@dimen/dimen_60"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:background="@drawable/select_camera_back"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="维修"
                        android:textColor="@drawable/select_camera_text_back"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/tv_check"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="@dimen/dimen_60"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:background="@drawable/select_camera_back"
                        android:button="@null"
                        android:gravity="center"
                        android:text="检查"
                        android:textColor="@drawable/select_camera_text_back"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/tv_do"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="@dimen/dimen_60"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:background="@drawable/select_camera_back"
                        android:button="@null"
                        android:gravity="center"
                        android:text="施工"
                        android:textColor="@drawable/select_camera_text_back"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/tv_accept"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="@dimen/dimen_60"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:background="@drawable/select_camera_back"
                        android:button="@null"
                        android:gravity="center"
                        android:text="验收"
                        android:textColor="@drawable/select_camera_text_back"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/tv_care"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="@dimen/dimen_60"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:background="@drawable/select_camera_back"
                        android:button="@null"
                        android:gravity="center"
                        android:text="保养"
                        android:textColor="@drawable/select_camera_text_back"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/tv_task"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="@dimen/dimen_60"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:background="@drawable/select_camera_back"
                        android:button="@null"
                        android:gravity="center"
                        android:text="任务"
                        android:textColor="@drawable/select_camera_text_back"
                        android:textSize="12sp" />

                </com.eanfang.witget.CustomRadioGroup>
            </LinearLayout>


            <ImageView
                android:id="@+id/start_take_photo"
                android:layout_width="@dimen/dimen_200"
                android:layout_height="@dimen/dimen_200"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:onClick="startTakePhoto"
                android:src="@mipmap/ic_worker_takephoto" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
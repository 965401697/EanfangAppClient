<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/tip_dialog_bg"
        android:orientation="vertical"
        android:weightSum="1">

        <include layout="@layout/view_title_bar" />

        <ImageView
            android:layout_width="@dimen/dimen_254"
            android:layout_height="@dimen/dimen_254"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_74"
            android:src="@mipmap/ic_coopercation_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_26"
            android:text="提交成功！"
            android:textColor="#4DD456"
            android:textSize="@dimen/textSize_18" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_60"
            android:paddingRight="@dimen/dimen_60">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_102"
                android:gravity="center"
                android:text="尊敬的用户，您必须进行资质认证才可以接单您必须进行资质认证才可以接单，并获得更多订单"
                android:textSize="@dimen/textSize_15" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_go"
            android:layout_width="@dimen/dimen_348"
            android:layout_height="@dimen/dimen_88"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:background="@drawable/bg_btn_trouble_detail_add_trouble"
            android:gravity="center"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_service"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="如有疑问，请联系客服处理"
        android:textColor="@color/color_bottom"
        android:textSize="@dimen/textSize_13" />

    <LinearLayout
        android:id="@+id/ll_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_38"
            android:text="客服热线："
            android:textColor="@color/color_bottom"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_38"
            android:text="400-890-9280"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>

</RelativeLayout>
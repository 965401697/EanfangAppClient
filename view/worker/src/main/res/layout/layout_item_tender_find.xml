<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_24"
    android:layout_marginTop="@dimen/dimen_30"
    android:layout_marginRight="@dimen/dimen_24"
    android:background="@drawable/bg_cancle"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_18">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingTop="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_22"
            android:paddingBottom="@dimen/dimen_30">

            <TextView
                android:id="@+id/tv_tender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_tender_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_30"
                android:layout_toRightOf="@id/tv_tender_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_tender_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_12" />

        </RelativeLayout>

        <View style="@style/style_common_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_26"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地区："
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/tv_tender_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工期："
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_14" />

                    <TextView
                        android:id="@+id/tv_tender_limit_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:textColor="@color/color_tender_offer_bg"
                        android:textSize="@dimen/textSize_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_40"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预算："
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_14" />

                    <TextView
                        android:id="@+id/tv_tender_budget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:textColor="@color/color_tender_offer_bg"
                        android:textSize="@dimen/textSize_14" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="要求："
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/tv_tender_require"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/style_common_line_gray"
            android:layout_marginTop="@dimen/dimen_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_38"
            android:paddingTop="@dimen/dimen_14">

            <TextView
                android:id="@+id/tv_cutoff_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="距截止还剩："
                android:textColor="@color/color_tender_offer_bg"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_34"
                android:background="@drawable/bg_tender_offer"
                android:paddingLeft="@dimen/dimen_40"
                android:paddingTop="@dimen/dimen_18"
                android:paddingRight="@dimen/dimen_40"
                android:paddingBottom="@dimen/dimen_18"
                android:text="我要报价"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
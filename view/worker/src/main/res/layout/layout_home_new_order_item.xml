<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_10"
    android:paddingTop="@dimen/dimen_20"
    android:paddingEnd="@dimen/dimen_10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_sign_address"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_32">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32">

            <TextView
                android:id="@+id/tv_order_type_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_38"
                android:background="@drawable/bg_new_order_status_back"
                android:paddingLeft="@dimen/dimen_20"
                android:paddingTop="@dimen/dimen_12"
                android:paddingRight="@dimen/dimen_20"
                android:paddingBottom="@dimen/dimen_12"
                android:text="维修"
                android:textColor="@color/color_new_order_back"
                android:textSize="@dimen/textSize_12" />

            <TextView
                android:id="@+id/tv_order_type_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_26"
                android:layout_toRightOf="@id/tv_order_type_first"
                android:text="电视监控"
                android:textColor="@color/color_new_order_back"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_27"
                android:text="待预约"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_38"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报修地区："
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:text="报修单位："
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:text="下单时间："
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/tv_contactName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:text="下单技师："
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_65"
                    android:text="北京市朝阳区："
                    android:textColor="@color/color_home_datastatistics"
                    android:textSize="@dimen/textSize_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_65"
                        android:layout_marginTop="@dimen/dimen_25"
                        android:text="北京哈哈哈公司"
                        android:textColor="@color/color_home_datastatistics"
                        android:textSize="@dimen/textSize_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_27"
                        android:src="@mipmap/arrow_black_right" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_65"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:text="2019-10-12 14:23:06"
                    android:textColor="@color/color_home_datastatistics"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/tv_worder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_65"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:text="王白石：1556852346945"
                    android:textColor="@color/color_home_datastatistics"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_operate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_32">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dimen_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_do_first"
                    android:layout_width="@dimen/dimen_160"
                    android:layout_height="@dimen/dimen_60"
                    android:background="@drawable/bg_new_order_confim_first"
                    android:gravity="center"
                    android:text="转单"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:id="@+id/tv_do_second"
                    android:layout_width="@dimen/dimen_160"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_marginLeft="@dimen/dimen_34"
                    android:background="@drawable/bg_new_order_confim_second"
                    android:gravity="center"
                    android:text="电话预约"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:id="@+id/tv_do_three"
                    android:layout_width="@dimen/dimen_200"
                    android:layout_height="@dimen/dimen_70"
                    android:layout_marginStart="@dimen/dimen_34"
                    android:background="@drawable/bg_new_order_confirm_three"
                    android:gravity="center"
                    android:text="查看完工报告"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize_12"
                    android:visibility="gone" />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
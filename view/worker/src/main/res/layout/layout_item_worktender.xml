<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dimen_24"
    android:layout_marginRight="@dimen/dimen_24"
    android:layout_marginTop="@dimen/dimen_30"
    android:background="@drawable/bg_cancle"
    android:paddingBottom="@dimen/dimen_18">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_26"
            android:paddingTop="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_22"
            android:paddingBottom="@dimen/dimen_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="项目名称:"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_tender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_weight="1"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>

        <View style="@style/style_common_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_26"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_26"
            android:paddingRight="@dimen/dimen_22">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="招标单位"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="系统类别"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="项目地区"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="发布时间"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_tender_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_36"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_14" />


                <TextView
                    android:id="@+id/tv_tender_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_36"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tender_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_36"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/arrow_right" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_tender_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_36"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_38"
            android:paddingTop="@dimen/dimen_14">

            <TextView
                android:id="@+id/tv_cutoff_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距截止还剩："
                android:textColor="@color/color_tender_offer_bg"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
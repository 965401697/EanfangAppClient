<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_38"
    android:layout_marginRight="@dimen/dimen_38"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dimen_80"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_80">

        <ImageView
            android:id="@+id/iv_user_header"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_70"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/im_add"
            />

        <ImageView
            android:layout_width="@dimen/dimen_30"
            android:src="@mipmap/im_sub"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:layout_height="@dimen/dimen_30" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_44"
        android:text="asd"
        android:layout_marginTop="@dimen/dimen_14"
        android:textColor="@color/color_bottom"
        android:visibility="invisible"
        android:textSize="@dimen/textSize_12" />

</LinearLayout>
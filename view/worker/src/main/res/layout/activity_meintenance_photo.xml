<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.eanfang.worker.ui.activity.worksapce.maintenance.MeintenancePhotoActivity">


    <include layout="@layout/header_eanfang" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_above="@+id/tv_save"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_30"
                        android:text="电视墙正面照"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_15" />

                    <View style="@style/style_common_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                            android:id="@+id/snpl_tv_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_30"
                            app:bga_snpl_deleteDrawable="@mipmap/bga_pp_ic_delete"
                            app:bga_snpl_deleteDrawableOverlapQuarter="false"
                            app:bga_snpl_editable="true"
                            app:bga_snpl_itemCornerRadius="0dp"
                            app:bga_snpl_itemSpanCount="3"
                            app:bga_snpl_itemWhiteSpacing="4dp"
                            app:bga_snpl_itemWidth="0dp"
                            app:bga_snpl_maxItemCount="3"
                            app:bga_snpl_otherWhiteSpacing="100dp"
                            app:bga_snpl_placeholderDrawable="@mipmap/ic_nodata"
                            app:bga_snpl_plusDrawable="@mipmap/bga_pp_ic_plus"
                            app:bga_snpl_plusEnable="true"
                            app:bga_snpl_sortable="true" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_operating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_tv"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_30"
                        android:text="操作台背面照"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_15" />

                    <View style="@style/style_common_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_30">

                        <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                            android:id="@+id/snpl_operating_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bga_snpl_deleteDrawable="@mipmap/bga_pp_ic_delete"
                            app:bga_snpl_deleteDrawableOverlapQuarter="false"
                            app:bga_snpl_editable="true"
                            app:bga_snpl_itemCornerRadius="0dp"
                            app:bga_snpl_itemSpanCount="3"
                            app:bga_snpl_itemWhiteSpacing="4dp"
                            app:bga_snpl_itemWidth="0dp"
                            app:bga_snpl_maxItemCount="3"
                            app:bga_snpl_otherWhiteSpacing="100dp"
                            app:bga_snpl_placeholderDrawable="@mipmap/ic_nodata"
                            app:bga_snpl_plusDrawable="@mipmap/bga_pp_ic_plus"
                            app:bga_snpl_plusEnable="true"
                            app:bga_snpl_sortable="true" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_operating"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_30"
                        android:text="机柜照片"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_15" />

                    <View style="@style/style_common_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_30">

                        <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                            android:id="@+id/snpl_box_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bga_snpl_deleteDrawable="@mipmap/bga_pp_ic_delete"
                            app:bga_snpl_deleteDrawableOverlapQuarter="false"
                            app:bga_snpl_editable="true"
                            app:bga_snpl_itemCornerRadius="0dp"
                            app:bga_snpl_itemSpanCount="3"
                            app:bga_snpl_itemWhiteSpacing="4dp"
                            app:bga_snpl_itemWidth="0dp"
                            app:bga_snpl_maxItemCount="3"
                            app:bga_snpl_otherWhiteSpacing="100dp"
                            app:bga_snpl_placeholderDrawable="@mipmap/ic_nodata"
                            app:bga_snpl_plusDrawable="@mipmap/bga_pp_ic_plus"
                            app:bga_snpl_plusEnable="true"
                            app:bga_snpl_sortable="true" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_equipment"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_30"
                        android:text="单据照片"
                        android:textColor="@color/color_client_neworder"
                        android:textSize="@dimen/textSize_15" />

                    <View style="@style/style_common_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_30">

                        <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
                            android:id="@+id/snpl_invoices_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:bga_snpl_deleteDrawable="@mipmap/bga_pp_ic_delete"
                            app:bga_snpl_deleteDrawableOverlapQuarter="false"
                            app:bga_snpl_editable="true"
                            app:bga_snpl_itemCornerRadius="0dp"
                            app:bga_snpl_itemSpanCount="3"
                            app:bga_snpl_itemWhiteSpacing="4dp"
                            app:bga_snpl_itemWidth="0dp"
                            app:bga_snpl_maxItemCount="3"
                            app:bga_snpl_otherWhiteSpacing="100dp"
                            app:bga_snpl_placeholderDrawable="@mipmap/ic_nodata"
                            app:bga_snpl_plusDrawable="@mipmap/bga_pp_ic_plus"
                            app:bga_snpl_plusEnable="true"
                            app:bga_snpl_sortable="true" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_btn_trouble_detail_add_trouble"
            android:gravity="center"
            android:padding="@dimen/dimen_30"
            android:text="保存"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_14" />

    </RelativeLayout>


</LinearLayout>



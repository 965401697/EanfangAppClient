<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/color_contact_line_gray"
    tools:context="net.eanfang.worker.ui.activity.my.certification.CertificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200"
            android:background="@color/color_white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_50"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_38"
                    android:text="基本资料"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_13" />


                <TextView
                    android:id="@+id/tv_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_38"
                    android:text="身份证信息"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_38"
                    android:text="其他资料"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交成功"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/point_1" />

                <TextView
                    android:id="@+id/tv_one"
                    android:layout_width="@dimen/dimen_120"
                    android:layout_height="@dimen/dimen_2"
                    android:layout_gravity="center_vertical"
                    android:background="#DEDEDE" />

                <ImageView
                    android:id="@+id/iv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/point_0" />

                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="@dimen/dimen_120"
                    android:layout_height="@dimen/dimen_2"
                    android:layout_gravity="center_vertical"
                    android:background="#DEDEDE" />


                <ImageView
                    android:id="@+id/iv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/point_0" />

                <TextView
                    android:id="@+id/tv_three"
                    android:layout_width="@dimen/dimen_120"
                    android:layout_height="@dimen/dimen_2"
                    android:layout_gravity="center_vertical"
                    android:background="#DEDEDE" />

                <ImageView
                    android:id="@+id/iv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/point_0" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingLeft="@dimen/dimen_36"
            android:paddingRight="@dimen/dimen_34"
            android:paddingTop="@dimen/dimen_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />

            <LinearLayout
                android:id="@+id/ll_headers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:orientation="horizontal">

                <com.eanfang.base.widget.customview.CircleImageView
                    android:id="@+id/iv_header"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    android:layout_marginRight="@dimen/dimen_24"
                    android:src="@mipmap/ic_nodata" />

                <ImageView
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

        </LinearLayout>

        <View style="@style/style_common_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingLeft="@dimen/dimen_36"
            android:paddingRight="@dimen/dimen_34"
            android:paddingTop="@dimen/dimen_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:hint="姓名"
                android:inputType="textPersonName"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

        <View style="@style/style_common_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingLeft="@dimen/dimen_36"
            android:paddingRight="@dimen/dimen_34"
            android:paddingTop="@dimen/dimen_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/tv_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:hint="联系电话"
                android:inputType="phone|number"
                android:maxLength="11"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

        <View style="@style/style_common_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingLeft="@dimen/dimen_36"
            android:paddingRight="@dimen/dimen_34"
            android:paddingTop="@dimen/dimen_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />

            <EditText
                android:id="@+id/et_card_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:gravity="right"
                android:hint="请输入"
                android:inputType="number"
                android:maxLength="20"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

        <View style="@style/style_common_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_20"
            android:paddingLeft="@dimen/dimen_36"
            android:paddingRight="@dimen/dimen_34"
            android:paddingTop="@dimen/dimen_20">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="性别"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />


            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_man"
                    android:layout_width="@dimen/dimen_120"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_marginRight="@dimen/dimen_30"
                    android:background="@drawable/select_camera_back"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="男"

                    android:textColor="@drawable/select_trouble_repair_result" />

                <RadioButton
                    android:id="@+id/rb_woman"
                    android:layout_width="@dimen/dimen_120"
                    android:layout_height="@dimen/dimen_60"
                    android:background="@drawable/select_camera_back"
                    android:button="@null"
                    android:gravity="center"
                    android:text="女"
                    android:textColor="@drawable/select_trouble_repair_result" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@color/color_white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_30"
                android:text="个人简介"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_14" />

            <View style="@style/style_common_line_gray" />

            <EditText
                android:id="@+id/et_intro"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_150"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dimen_30"
                android:background="@null"
                android:gravity="start"
                android:hint="个人简介..."
                android:textColor="@color/color_client_neworder"
                android:textColorHint="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_20"
        android:background="@drawable/bg_btn_trouble_detail_add_trouble"
        android:gravity="center"
        android:padding="@dimen/dimen_30"
        android:text="去添加身份证信息→"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_13" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/content_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_126"
                android:background="@color/white">

                <com.eanfang.base.widget.customview.CircleImageView
                    android:id="@+id/iv_report_header"
                    android:layout_width="@dimen/dimen_70"
                    android:layout_height="@dimen/dimen_70"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_36"
                    android:src="@mipmap/ic_header"
                     />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_report_header"
                    android:layout_marginLeft="@dimen/dimen_24"
                    android:layout_toRightOf="@+id/iv_report_header"
                    android:text=" "
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_15" />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv_name"
                    android:layout_below="@+id/tv_name"
                    android:text=" "
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_12" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2"
                android:background="@color/background" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:background="@drawable/bg_ll_selctor"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_40"
                    android:text="维保地址"
                    android:textColor="@color/roll_content"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_48"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:textColor="@color/roll_content"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_40"
                    android:text="联系电话"
                    android:textColor="@color/roll_content"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_48"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:textColor="@color/roll_content"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_92"
                    android:layout_marginLeft="@dimen/dimen_39"
                    android:gravity="center"
                    android:text="订单信息"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/background" />

                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_period_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_plan_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_plan_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_2"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:background="@color/background" />

                <TextView
                    android:id="@+id/tv_standard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />


                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_34"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_92"
                    android:layout_marginLeft="@dimen/dimen_39"
                    android:gravity="center"
                    android:text="维保信息"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/background" />

                <TextView
                    android:id="@+id/tv_worker_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_worker_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_worker_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_os_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_38"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_34"
                    android:text=" "
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_device_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_84"
                        android:layout_marginLeft="@dimen/dimen_39"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="主要设备清单"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_15" />

                    <ImageView
                        android:id="@+id/iv_device_list"
                        android:layout_width="@dimen/dimen_26"
                        android:layout_height="@dimen/dimen_14"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dimen_28"
                        android:src="@mipmap/ic_arrow_up" />

                    <TextView
                        android:id="@+id/tv_device_list"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="无"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/dimen_28"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_device_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_device_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_84"
                        android:layout_marginLeft="@dimen/dimen_39"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="重点设备排查"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_15" />

                    <ImageView
                        android:id="@+id/iv_device_test"
                        android:layout_width="@dimen/dimen_26"
                        android:layout_height="@dimen/dimen_14"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dimen_28"
                        android:src="@mipmap/ic_arrow_up" />
                    <TextView
                        android:id="@+id/tv_device_test"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="无"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/dimen_28"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_device_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

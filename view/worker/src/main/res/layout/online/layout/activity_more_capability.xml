<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_contact_line_gray"
    android:orientation="vertical">

    <include layout="@layout/header_eanfang" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_75"
                    android:layout_height="@dimen/dimen_75"
                    android:layout_margin="@dimen/dimen_20"
                    android:src="@mipmap/zz_jg_tv" />

                <TextView
                    android:id="@+id/header_l_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_20"
                    android:text="施工组织能力"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/header_r_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:background="@drawable/bg_gradual_change_ellipse_b"
                    android:gravity="center"
                    android:padding="@dimen/dimen_8"
                    android:text="  + 添加  "
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </androidx.recyclerview.widget.RecyclerView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/footer_sz_tv"
                    android:layout_width="wrap_content"
                    android:drawableRight="@mipmap/sjt_x_iv"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dimen_16"
                    android:padding="@dimen/dimen_20"
                    android:text="查看所有"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_75"
                    android:layout_height="@dimen/dimen_75"
                    android:layout_margin="@dimen/dimen_20"
                    android:src="@mipmap/gj_jx_tv" />

                <TextView
                    android:id="@+id/footer_l_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_20"
                    android:text="工具机械设备"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/footer_r_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:background="@drawable/bg_gradual_change_ellipse_b"
                    android:gravity="center"
                    android:padding="@dimen/dimen_8"
                    android:text="  + 添加  "
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </androidx.recyclerview.widget.RecyclerView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/footer_gj_tv"
                    android:layout_width="wrap_content"
                    android:drawableRight="@mipmap/sjt_x_iv"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/dimen_20"
                    android:text="查看所有"
                    android:drawablePadding="@dimen/dimen_16"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_50"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_simpleView"
            android:layout_width="@dimen/dimen_200"
            android:layout_height="@dimen/dimen_200"
            android:layout_marginLeft="@dimen/dimen_10"
            fresco:placeholderImage="@mipmap/ic_personal_qrcode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您即将登陆易安防"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_which"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=",请确认是本人操作"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_confirmLogin"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_70"
            android:layout_marginLeft="@dimen/dimen_50"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_confirm"
            android:gravity="center"
            android:text="允许登陆"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_15" />

        <TextView
            android:id="@+id/tv_cancelLogin"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_70"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_50"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_cancel"
            android:gravity="center"
            android:text="取消登陆"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_15" />
    </LinearLayout>

</LinearLayout>

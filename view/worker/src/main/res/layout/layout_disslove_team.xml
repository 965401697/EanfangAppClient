<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_client_contact_create"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_40"
    android:paddingLeft="@dimen/dimen_60"
    android:paddingRight="@dimen/dimen_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_25"
            android:src="@mipmap/ic_contact_create_close" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您确定要解散团队吗？"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此操作将会清除所有的相关数据，
请谨慎操作。"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如需继续："
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginTop="@dimen/dimen_60"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@null"
            android:hint="请输入管理员密码"
            android:inputType="textPassword"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_14" />

        <View
            style="@style/style_common_line_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dimen_20" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60">

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10"
            android:text="忘记密码？"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_13" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/dimen_170"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_30"
            android:background="@drawable/bg_worker_camera_text_back"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_confim"
            android:layout_width="@dimen/dimen_170"
            android:layout_height="@dimen/dimen_60"
            android:layout_marginLeft="@dimen/dimen_30"
            android:background="@drawable/bg_worker_camera_text_back_pressed"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>
</LinearLayout>
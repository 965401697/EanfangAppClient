<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="115dp"
        android:padding="@dimen/dimen_20">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_rightIcon"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            app:placeholderImage="@mipmap/ic_nodata" />

        <TextView
            android:id="@+id/tv_rightName"
            android:layout_width="@dimen/dimen_104"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_rightIcon"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_13" />
        <ImageView
            android:id="@+id/check_true_t"
            android:layout_width="@dimen/dimen_38"
            android:layout_height="@dimen/dimen_38"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:src="@drawable/check_true" />
    </RelativeLayout>

</LinearLayout>
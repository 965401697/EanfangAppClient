<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/header_eanfang" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_20"
            android:src="@mipmap/tj_cg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_26"
            android:text="提交成功！"
            android:textColor="#333333"
            android:textSize="@dimen/textSize_20" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_60"
            android:gravity="center"
            android:textColor="#999999"
            android:lineSpacingMultiplier="1.3"
            android:text="企业客户享有更多的功能"
            android:textSize="@dimen/textSize_15" />

        <TextView
            android:id="@+id/tv_go"
            android:layout_width="@dimen/dimen_348"
            android:layout_height="@dimen/dimen_88"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_gradual_change_ellipse"
            android:gravity="center"
            android:textSize="13sp"
            android:text="前往创建团队"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_60">

            <ImageView
                android:id="@+id/logo_iv"
                android:layout_width="@dimen/dimen_1"
                android:layout_height="@dimen/dimen_100"
                android:src="@mipmap/worker_logo"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/yw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_toRightOf="@id/logo_iv"
                android:text="如有疑问，请联系客服处理，"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/yw_b_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yw_tv"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_toRightOf="@id/logo_iv"
                android:text="客服热线: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/call_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/yw_tv"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_toRightOf="@id/yw_b_tv"
                android:autoLink="all"
                android:text="400-890-9280"
                android:textColor="#4988F5"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>

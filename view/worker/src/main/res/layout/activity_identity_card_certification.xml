<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.eanfang.worker.ui.activity.my.certification.IdentityCardCertification">


    <include layout="@layout/header" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200"
                android:background="@color/color_white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_50"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_38"
                        android:text="基本资料"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_13" />


                    <TextView
                        android:id="@+id/tv_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_38"
                        android:text="身份证信息"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_38"
                        android:text="其他资料"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                    <TextView
                        android:id="@+id/tv_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提交成功"
                        android:textColor="@color/color_bottom"
                        android:textSize="@dimen/textSize_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/point_3" />

                    <TextView
                        android:id="@+id/tv_one"
                        android:layout_width="@dimen/dimen_120"
                        android:layout_height="@dimen/dimen_2"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/point_1" />

                    <TextView
                        android:id="@+id/tv_two"
                        android:layout_width="@dimen/dimen_120"
                        android:layout_height="@dimen/dimen_2"
                        android:layout_gravity="center_vertical"
                        android:background="#DEDEDE" />


                    <ImageView
                        android:id="@+id/iv_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/point_0" />

                    <TextView
                        android:id="@+id/tv_three"
                        android:layout_width="@dimen/dimen_120"
                        android:layout_height="@dimen/dimen_2"
                        android:layout_gravity="center_vertical"
                        android:background="#DEDEDE" />

                    <ImageView
                        android:id="@+id/iv_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/point_0" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@color/color_white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_40"
                            android:layout_marginTop="@dimen/dimen_40"
                            android:text="身份证正面"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />

                        <ImageView
                            android:id="@+id/iv_idCard_front"
                            android:layout_width="@dimen/dimen_400"
                            android:layout_height="@dimen/dimen_180"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/dimen_40"
                            android:layout_marginTop="@dimen/dimen_40"
                            android:src="@mipmap/bga_re_ic_plus" />


                    </LinearLayout>


                    <View style="@style/style_common_line_gray" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_40"
                            android:layout_marginTop="@dimen/dimen_40"
                            android:text="身份证反面"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />

                        <ImageView
                            android:id="@+id/iv_idCard_back"
                            android:layout_width="@dimen/dimen_400"
                            android:layout_height="@dimen/dimen_180"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/dimen_40"
                            android:layout_marginTop="@dimen/dimen_40"
                            android:src="@mipmap/bga_re_ic_plus" />

                    </LinearLayout>

                    <View style="@style/style_common_line_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_40"
                            android:layout_marginTop="@dimen/dimen_40"
                            android:text="手持身份证"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />

                        <ImageView
                            android:id="@+id/iv_idCard_inHand"
                            android:layout_width="@dimen/dimen_400"
                            android:layout_height="@dimen/dimen_180"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/dimen_40"
                            android:layout_marginTop="@dimen/dimen_40"
                            android:src="@mipmap/bga_re_ic_plus" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/bg_btn_trouble_detail_add_trouble"
        android:gravity="center"
        android:padding="@dimen/dimen_30"
        android:text="去添加其他资料→"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_14" />


</LinearLayout>
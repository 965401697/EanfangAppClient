<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_letter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_46"
        android:background="@color/content_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_36"
        android:text="a"
        android:textColor="@color/roll_title"
        android:textSize="@dimen/textSize_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_contact_line_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_128">

        <TextView
            android:id="@+id/tv_area_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_38"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dimen_46"
            android:text=" "
            android:textSize="16sp" />



    </RelativeLayout>


</LinearLayout>
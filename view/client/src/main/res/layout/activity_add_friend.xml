<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_eanfang" />

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90"
        android:layout_marginTop="@dimen/dimen_30"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dimen_36"
            android:layout_height="@dimen/dimen_36"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_38"
            android:src="@mipmap/ic_seacrh" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_toRightOf="@+id/iv_search"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入好友手机号"
            android:inputType="number"
            android:maxEms="11"
            android:textColorHint="@color/color_client_neworder"
            android:textSize="@dimen/textSize_14" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_scan_friend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90"
        android:layout_marginTop="@dimen/dimen_30"
        android:background="@color/white">


        <ImageView
            android:id="@+id/iv_scam"
            android:layout_width="@dimen/dimen_36"
            android:layout_height="@dimen/dimen_36"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_38"
            android:src="@mipmap/ic_scan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_toRightOf="@+id/iv_scam"
            android:text="扫一扫添加好友"
            android:textColor="@color/color_client_neworder" />

        <ImageView
            android:layout_width="@dimen/dimen_14"
            android:layout_height="@dimen/dimen_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_28"
            android:src="@mipmap/ic_icon_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_scan_Group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90"
        android:layout_marginTop="@dimen/dimen_30"
        android:background="@color/white">


        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="@dimen/dimen_36"
            android:layout_height="@dimen/dimen_36"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_38"
            android:src="@mipmap/ic_scan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_toRightOf="@+id/iv_scan"
            android:text="扫一扫添加群组"
            android:textColor="@color/color_client_neworder" />

        <ImageView
            android:layout_width="@dimen/dimen_14"
            android:layout_height="@dimen/dimen_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_28"
            android:src="@mipmap/ic_icon_right" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_30" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_allData"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_106"
        android:paddingLeft="@dimen/dimen_38"
        android:background="@color/color_home_demarcation_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="统计数据"
            android:textColor="@color/color_my_fragment_text"
            android:textSize="@dimen/textSize_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_30"
            android:background="@drawable/bg_worker_home_all"
            android:paddingBottom="@dimen/dimen_12"
            android:paddingLeft="@dimen/dimen_28"
            android:paddingRight="@dimen/dimen_28"
            android:paddingTop="@dimen/dimen_12"
            android:text="@string/text_home_alldata"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_12" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_datastatistics"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90"
            tl:tl_indicator_color="@color/colorPrimary"
            tl:tl_indicator_height="1.5dp"
            tl:tl_tab_padding="@dimen/dimen_1"
            tl:tl_tab_space_equal="true"
            tl:tl_textSelectColor="@color/colorPrimary"
            tl:tl_textUnselectColor="#84889A"
            tl:tl_textsize="@dimen/textSize_14"
            tl:tl_underline_color="#1A000000"
            tl:tl_underline_height="1dp" />

        <net.eanfang.client.ui.widget.CustomHomeViewPager
            android:id="@+id/vp_datastatistics"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
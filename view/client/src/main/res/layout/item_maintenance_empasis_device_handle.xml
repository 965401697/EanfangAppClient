<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ll_selctor"
    android:orientation="vertical">

    <View style="@style/style_common_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_os_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_26"
            android:layout_marginTop="@dimen/dimen_26"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22"
            android:text="北京法安视科技有限公司"
            android:textColor="@color/color_order_list_price"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@+id/tv_empasis_status"
            android:layout_width="@dimen/dimen_120"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/select_worker"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_34"
            android:text="去完善"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_170"
        android:layout_marginBottom="@dimen/dimen_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_38"
        android:paddingRight="@dimen/dimen_22">

        <ImageView
            android:id="@+id/iv_upload"
            android:layout_width="@dimen/dimen_180"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_nodata" />

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_location_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置编号"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_position_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="安装位置："
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="维保状态："
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="维修历史："
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
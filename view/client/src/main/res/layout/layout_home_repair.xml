<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_home_repair"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100"
            app:tl_indicator_color="@color/color_home_repair_commit_bg"
            app:tl_indicator_height="1.5dp"
            app:tl_tab_padding="@dimen/dimen_1"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/color_home_repair_commit_bg"
            app:tl_textUnselectColor="@color/color_text"
            app:tl_textsize="@dimen/textSize_14"
            app:tl_underline_color="#1A000000"
            app:tl_underline_height="1dp" />

        <net.eanfang.client.ui.widget.CustomHomeViewPager
            android:id="@+id/vp_home_repair"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
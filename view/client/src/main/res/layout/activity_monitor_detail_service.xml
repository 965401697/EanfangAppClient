<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        tools:context=".ui.activity.worksapce.monitor.device.MonitorDetailServiceActivity">

        <include layout="@layout/header_eanfang" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_100"
            android:src="@mipmap/ic_monitor_device_face_leave" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_60"
            android:textColor="@color/color_client_neworder"
            android:textSize="@dimen/textSize_14" />

        <LinearLayout
            android:id="@+id/ll_clound"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="云存储尊享权益"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_60"
                android:orientation="horizontal">

                <TextView
                    style="@style/style_client_monitor_detail_meun"
                    android:drawableTop="@mipmap/ic_monitor_device_face_video"
                    android:drawablePadding="@dimen/dimen_16"
                    android:text="云录像"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    style="@style/style_client_monitor_detail_meun"
                    android:drawableTop="@mipmap/ic_monitor_device_face_save"
                    android:drawablePadding="@dimen/dimen_16"
                    android:text="云空间"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    style="@style/style_client_monitor_detail_meun"
                    android:drawableTop="@mipmap/ic_monitor_device_clound_alarm"
                    android:drawablePadding="@dimen/dimen_16"
                    android:text="告警视频"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    style="@style/style_client_monitor_detail_meun"
                    android:drawableTop="@mipmap/ic_monitor_device_face_check"
                    android:drawablePadding="@dimen/dimen_16"
                    android:text="智能检测"
                    android:textSize="@dimen/textSize_14" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_90"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dimen_40"
                android:background="@drawable/shape_bg_sure"
                android:gravity="center"
                android:text="联系客服开通"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>
</layout>
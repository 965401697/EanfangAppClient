<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_14"
    android:orientation="vertical">

    <include layout="@layout/header_eanfang" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_92"
                    android:layout_marginLeft="@dimen/dimen_39"
                    android:gravity="center"
                    android:text="存在问题"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/background" />

                <EditText
                    android:id="@+id/et_question"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/dimen_30"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入..."
                    android:maxEms="200"
                    android:padding="10dp"
                    android:textColor="@color/color_client_neworder"
                    android:textColorHint="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_14"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_92"
                    android:layout_marginLeft="@dimen/dimen_39"
                    android:gravity="center"
                    android:text="处理过程"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/background" />

                <EditText
                    android:id="@+id/et_handle"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/dimen_30"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入..."
                    android:maxEms="200"
                    android:padding="10dp"
                    android:textColor="@color/color_client_neworder"
                    android:textColorHint="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_14"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_92"
                    android:layout_marginLeft="@dimen/dimen_39"
                    android:gravity="center"
                    android:text="备注信息"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/background" />

                <EditText
                    android:id="@+id/et_notice"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/dimen_30"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入..."
                    android:maxEms="200"
                    android:padding="10dp"
                    android:textColor="@color/color_client_neworder"
                    android:textColorHint="@color/color_bottom"
                    android:textSize="@dimen/textSize_13" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_conclusion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_84"
                    android:layout_marginLeft="@dimen/dimen_39"
                    android:gravity="center_vertical"
                    android:text="处理结论"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_15" />


                <EditText
                    android:id="@+id/tv_conclusion"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_84"
                    android:layout_marginLeft="@dimen/dimen_36"
                    android:layout_weight="1"
                    android:background="@null"
                    android:focusable="false"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_13" />

                <ImageView
                    android:layout_width="@dimen/dimen_26"
                    android:layout_height="@dimen/dimen_14"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_28"
                    android:src="@mipmap/ic_arrow_up" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_operating"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/color_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_30"
                    android:text="照片"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_15" />

                <View style="@style/style_common_line_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_30">

                    <com.photopicker.com.widget.BGASortableNinePhotoLayout
                        android:id="@+id/snpl_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bga_snpl_deleteDrawable="@mipmap/bga_pp_ic_delete"
                        app:bga_snpl_deleteDrawableOverlapQuarter="false"
                        app:bga_snpl_editable="true"
                        app:bga_snpl_itemCornerRadius="0dp"
                        app:bga_snpl_itemSpanCount="3"
                        app:bga_snpl_itemWhiteSpacing="4dp"
                        app:bga_snpl_itemWidth="0dp"
                        app:bga_snpl_maxItemCount="3"
                        app:bga_snpl_otherWhiteSpacing="100dp"
                        app:bga_snpl_placeholderDrawable="@mipmap/ic_nodata"
                        app:bga_snpl_plusDrawable="@mipmap/bga_pp_ic_plus"
                        app:bga_snpl_plusEnable="true"
                        app:bga_snpl_sortable="true" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dimen_40"
                android:background="@drawable/bg_btn_trouble_detail_add_trouble"
                android:gravity="center"
                android:padding="@dimen/dimen_30"
                android:text="确定添加"
                android:textColor="@color/color_white"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

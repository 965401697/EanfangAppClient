<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_home_company_logo"
        android:layout_width="@dimen/dimen_140"
        android:layout_height="@dimen/dimen_140"
        android:layout_marginLeft="@dimen/dimen_44"
        android:layout_marginTop="@dimen/dimen_34"
        android:scaleType="fitXY"
        android:src="@drawable/img_special_service" />

    <TextView
        android:id="@+id/tv_home_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_28"
        android:layout_marginTop="@dimen/dimen_40"
        android:layout_toRightOf="@id/img_home_company_logo"
        android:text="公司名称"
        android:textColor="@color/color_client_neworder"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_28"
        android:layout_marginTop="@dimen/dimen_40"
        android:layout_toRightOf="@id/tv_home_company_name"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_rz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/rz" />

        <TextView
            android:id="@+id/tv_home_company_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="已认证"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_home_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home_company_name"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_toRightOf="@id/img_home_company_logo"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_home_company_rz_type1"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_14"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_14"
            android:paddingBottom="@dimen/dimen_8"
            android:text="培训"
            android:textColor="@color/color_home_company_rz1"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_22"
            android:background="@drawable/shape_home_company_rz_type1"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_14"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_14"
            android:paddingBottom="@dimen/dimen_8"
            android:text="资质"
            android:textColor="@color/color_home_company_rz1"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_22"
            android:background="@drawable/shape_home_company_rz_type2"
            android:paddingLeft="@dimen/dimen_14"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_14"
            android:paddingBottom="@dimen/dimen_8"
            android:text="认证"
            android:textColor="@color/color_home_company_rz2"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_22"
            android:background="@drawable/shape_home_company_rz_type2"
            android:paddingLeft="@dimen/dimen_14"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_14"
            android:paddingBottom="@dimen/dimen_8"
            android:text="保证金10000"
            android:textColor="@color/color_home_company_rz2"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_home_company_worker_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home_company_name"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_toRightOf="@id/img_home_company_logo"
        android:background="@drawable/shape_home_company_rz_type1"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_14"
        android:paddingTop="@dimen/dimen_8"
        android:paddingRight="@dimen/dimen_14"
        android:paddingBottom="@dimen/dimen_8"
        android:text="从业"
        android:textColor="@color/color_home_company_rz1"
        android:textSize="11sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_home_company_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home_company_worker_year"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_toRightOf="@id/img_home_company_logo"
        android:text="设：300"
        android:textColor="@color/color_home_company_rz1"
        android:textSize="@dimen/textSize_13" />

    <TextView
        android:id="@+id/tv_home_company_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home_company_worker_year"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_toRightOf="@id/tv_home_company_design"
        android:text="评：300"
        android:textColor="@color/color_home_company_rz1"
        android:textSize="@dimen/textSize_13" />

    <TextView
        android:id="@+id/tv_home_company_install"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home_company_worker_year"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_toRightOf="@id/tv_home_company_rate"
        android:text="施：300"
        android:textColor="@color/color_home_company_rz1"
        android:textSize="@dimen/textSize_13" />

    <TextView
        android:id="@+id/tv_home_company_repair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home_company_worker_year"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_toRightOf="@id/tv_home_company_install"
        android:text="修：300"
        android:textColor="@color/color_home_company_rz1"
        android:textSize="@dimen/textSize_13" />

    <TextView
        android:id="@+id/tv_home_company_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_home_company_logo"
        android:layout_marginLeft="@dimen/dimen_44"
        android:layout_marginTop="@dimen/dimen_42"
        android:text="地址："
        android:textColor="@color/color_home_company_address"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_home_company_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_home_company_logo"
        android:layout_marginTop="@dimen/dimen_42"
        android:layout_toRightOf="@id/tv_home_company_address_name"
        android:text="北京市北京市北京市北京市北京市北京市北京市北京市北京市"
        android:textColor="@color/color_home_company_address"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_home_company_address"
        android:layout_marginTop="@dimen/dimen_28"
        android:layout_marginBottom="@dimen/dimen_24"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_home_company_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_46"
            android:text="已有12394人咨询"
            android:layout_weight="1"
            android:textColor="@color/color_home_company_install_bg"
            android:textSize="12sp" />



        <Button
            android:id="@+id/btn_home_company_install"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/dimen_186"
            android:layout_height="@dimen/dimen_64"
            android:background="@drawable/shape_bg_home_company_install"
            android:text="我要装监控"
            android:layout_marginRight="@dimen/dimen_20"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <Button
            android:id="@+id/btn_home_company_repair"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/dimen_186"
            android:layout_height="@dimen/dimen_64"
            android:background="@drawable/shape_bg_home_repair_commit"
            android:text="我要修监控"
            android:layout_marginRight="@dimen/dimen_16"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
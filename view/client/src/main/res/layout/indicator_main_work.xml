<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120"
    android:layout_gravity="center"
    android:background="@color/color_bottom_back"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_work_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_18"
        android:src="@drawable/main_tab_worker_selector" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_work_tab"
        android:layout_centerHorizontal="true"
        android:textSize="11sp"
        android:textColor="@drawable/selector_home_tab_color"
        android:text="控制台"/>

    <View
        android:id="@+id/tab_work"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="@dimen/dimen_100"
        android:layout_alignTop="@id/img_work_tab"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dimen_5" />

    <View
        android:id="@+id/redPoint_work"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="-10dp"
        android:layout_alignTop="@id/img_work_tab"
        android:layout_toRightOf="@id/img_work_tab"
        android:background="@drawable/red_point"
        android:visibility="gone" />

</RelativeLayout>
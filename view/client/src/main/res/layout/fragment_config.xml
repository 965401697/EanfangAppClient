<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_500">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_410"
                    android:background="@mipmap/ic_personal_top_back"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20">

                        <ImageView
                            android:id="@+id/iv_setting"
                            android:layout_width="@dimen/dimen_40"
                            android:layout_height="@dimen/dimen_46"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dimen_32"
                            android:src="@mipmap/ic_worker_personal_setting" />

                        <TextView
                            android:id="@+id/tv_homeTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dimen_30"
                            android:text="个人中心"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:layout_marginTop="@dimen/dimen_40">

                        <LinearLayout
                            android:id="@+id/ll_user_header"
                            android:layout_width="@dimen/dimen_190"
                            android:layout_height="@dimen/dimen_190"
                            android:background="@mipmap/ic_personal_head_back"
                            android:gravity="center">


                            <include layout="@layout/layout_headview" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_44"
                            android:layout_toRightOf="@id/ll_user_header"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="@dimen/dimen_200"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="marquee"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:gravity="center_vertical"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:paddingTop="@dimen/dimen_20"
                                android:paddingBottom="@dimen/dimen_20"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:text="小明童鞋"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/textSize_20" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="match_parent"
                                android:paddingTop="10dp"
                                android:src="@drawable/contend_ic_v"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"

                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="信用值："
                                    android:textColor="@color/color_my_fragment_qr_code_text"
                                    android:textSize="@dimen/textSize_12" />

                                <TextView
                                    android:id="@+id/tv_credit_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textColor="@color/color_my_fragment_qr_code_text"
                                    android:textSize="@dimen/textSize_12" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dimen_12"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="积分："
                                    android:textColor="@color/color_my_fragment_qr_code_text"
                                    android:textSize="@dimen/textSize_12" />

                                <TextView
                                    android:id="@+id/tv_accumulate_poin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_30"
                                    android:text="2"
                                    android:textColor="@color/color_my_fragment_qr_code_text"
                                    android:textSize="@dimen/textSize_12" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_personalQRCode"
                            android:layout_width="@dimen/dimen_28"
                            android:layout_height="@dimen/dimen_28"
                            android:layout_below="@id/ll_msg"
                            android:layout_marginLeft="@dimen/dimen_44"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:layout_toRightOf="@id/ll_user_header"
                            android:src="@mipmap/ic_personal_qrcode" />

                        <TextView
                            android:id="@+id/tv_personalQRCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ll_msg"
                            android:layout_marginLeft="@dimen/dimen_12"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:layout_toRightOf="@id/iv_personalQRCode"
                            android:text="二维码名片"
                            android:textColor="@color/color_my_fragment_qr_code_text"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_write_personnel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ll_msg"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_30"
                            android:gravity="center"
                            android:text="@string/text_edit_personal_info"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_worker_my_top_money_back"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_worker_my_price" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_20"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="余额"
                                android:textColor="@color/color_my_fragment_remain_money_text"
                                android:textSize="@dimen/textSize_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textColor="@color/color_my_fragment_remain_money_text"
                                android:textSize="@dimen/textSize_15" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_worker_my_top_money_back"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_worker_my_pay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_20"
                            android:text="付款"
                            android:textColor="@color/color_my_fragment_pay_money_text"
                            android:textSize="@dimen/textSize_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_worker_my_top_money_back"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_worker_my_receive" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_20"
                            android:text="收款"
                            android:textColor="@color/color_my_fragment_make_money_text"
                            android:textSize="@dimen/textSize_15" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_22"
                android:layout_marginRight="@dimen/dimen_32"
                android:src="@drawable/img_invitation_entrance" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_36"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_30"
                android:paddingRight="@dimen/dimen_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_put_up_order_text_back"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20">

                    <RelativeLayout
                        style="@style/my_item_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="优惠券"
                            android:textColor="@color/color_my_fragment_text"
                            android:textSize="@dimen/textSize_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="@dimen/dimen_20"
                            android:layout_toLeftOf="@+id/iv_coupons"
                            android:text="您有 1 张免上门券待使用"
                            android:textColor="@color/color_bottom"
                            android:textSize="@dimen/textSize_12" />

                        <ImageView
                            android:id="@+id/iv_coupons"
                            android:layout_width="@dimen/dimen_12"
                            android:layout_height="@dimen/dimen_24"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_icon_right" />
                    </RelativeLayout>

                    <View style="@style/style_common_line_my" />

                    <RelativeLayout
                        style="@style/my_item_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="红包"
                            android:textColor="@color/color_my_fragment_text"
                            android:textSize="@dimen/textSize_14" />


                        <ImageView
                            android:layout_width="@dimen/dimen_12"
                            android:layout_height="@dimen/dimen_24"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_icon_right" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:background="@drawable/bg_put_up_order_text_back"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20">

                    <RelativeLayout
                        style="@style/my_item_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:onClick="noOpen">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="积分"
                            android:textColor="@color/color_my_fragment_text"
                            android:textSize="@dimen/textSize_14" />


                        <ImageView
                            android:id="@+id/iv_integral"
                            android:layout_width="@dimen/dimen_12"
                            android:layout_height="@dimen/dimen_24"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_icon_right" />
                    </RelativeLayout>

                    <View style="@style/style_common_line_my" />

                    <RelativeLayout
                        style="@style/my_item_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="noOpen">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="信用等级"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />


                        <ImageView
                            android:layout_width="@dimen/dimen_12"
                            android:layout_height="@dimen/dimen_24"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_icon_right" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/dimen_28"
                    android:background="@drawable/bg_put_up_order_text_back"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20">

                    <RelativeLayout
                        style="@style/my_item_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="noOpen">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="活动"
                            android:textColor="@color/color_my_fragment_text"
                            android:textSize="@dimen/textSize_14" />


                        <ImageView
                            android:layout_width="@dimen/dimen_12"
                            android:layout_height="@dimen/dimen_24"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_icon_right" />
                    </RelativeLayout>

                    <View style="@style/style_common_line_my" />

                    <RelativeLayout
                        android:id="@+id/rl_evaluate"
                        style="@style/my_item_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="评价"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />


                        <ImageView
                            android:layout_width="@dimen/dimen_12"
                            android:layout_height="@dimen/dimen_24"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_icon_right" />
                    </RelativeLayout>

                    <View style="@style/style_common_line_my" />

                    <RelativeLayout
                        android:id="@+id/rl_collect"
                        style="@style/my_item_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="noOpen">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="我的收藏"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />


                        <ImageView
                            android:layout_width="@dimen/dimen_12"
                            android:layout_height="@dimen/dimen_24"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_icon_right" />
                    </RelativeLayout>

                    <View style="@style/style_common_line_my" />

                    <RelativeLayout
                        android:id="@+id/rl_ivite"
                        style="@style/my_item_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="邀请"
                            android:textColor="@color/color_client_neworder"
                            android:textSize="@dimen/textSize_14" />


                        <ImageView
                            android:layout_width="@dimen/dimen_12"
                            android:layout_height="@dimen/dimen_24"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/ic_icon_right" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModle"
            type="net.eanfang.client.viewmodel.SecurityCompanyDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_20"
            android:paddingBottom="@dimen/dimen_20"
            android:text="业务类别"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_14" />

        <com.eanfang.witget.CustomRadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_40"
            android:paddingRight="@dimen/dimen_40" />

        <View
            style="@style/style_common_line_gray"
            android:layout_marginTop="@dimen/dimen_10" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_20"
            android:paddingBottom="@dimen/dimen_20"
            android:text="业务领域"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_14" />

        <com.eanfang.witget.CustomRadioGroup
            android:id="@+id/rg_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_40"
            android:paddingRight="@dimen/dimen_40" />

        <View
            style="@style/style_common_line_gray"
            android:layout_marginTop="@dimen/dimen_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_20"
            android:paddingBottom="@dimen/dimen_20"
            android:text="服务领域"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize_14" />

        <com.eanfang.witget.CustomRadioGroup
            android:id="@+id/rg_serviceArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_40"
            android:paddingRight="@dimen/dimen_40" />

        <View
            style="@style/style_common_line_gray"
            android:layout_marginTop="@dimen/dimen_10" />

        <TextView
            android:id="@+id/tv_allArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_28"
            android:text="查看所有服务区域>>" />
    </LinearLayout>
</layout>
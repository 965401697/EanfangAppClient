<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_88">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_22"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/color_main_header_bg"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_post_name"
        android:layout_width="@dimen/dimen_180"
        android:layout_height="wrap_content"
        android:text="脱岗"
        android:gravity="center"
        android:textColor="@color/color_client_neworder"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_rank"
        app:layout_constraintRight_toLeftOf="@id/tv_alert_count"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_alert_count"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="wrap_content"
        android:text="136次"
        android:textColor="@color/color_client_neworder"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_post_name"
        app:layout_constraintRight_toLeftOf="@id/tv_alert_change"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_alert_change"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_140"
        android:text="较上月"
        android:textColor="@color/color_client_neworder"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dimen_26"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_new_line"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.worksapce.monitor.device.MonitorDeviceManagerActivity">

        <include layout="@layout/header_eanfang" />

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_300" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="@dimen/dimen_30">

            <TextView
                android:id="@+id/tv_devicesName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机动方式安山东"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/ic_icon_right"
                android:drawablePadding="@dimen/dimen_20"
                android:text="编辑" />
        </RelativeLayout>

        <View style="@style/style_common_line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="@dimen/dimen_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备分组"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:id="@+id/tv_deviceGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/ic_icon_right"
                android:drawablePadding="@dimen/dimen_20"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="@dimen/dimen_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备型号"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:id="@+id/tv_deviceModle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <View style="@style/style_common_line_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="@dimen/dimen_30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="序列号"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:id="@+id/tv_deviceSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_18"
    android:paddingTop="@dimen/dimen_30">

    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_24"
        android:src="@mipmap/ic_order_finish"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22">

            <TextView
                android:id="@+id/tv_order_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@drawable/select_worker"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10"
                android:text="未读"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="北京法安视科技有限公司（刘辉）"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_13" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>

        <View
            style="@style/style_common_line_gray"
            android:layout_marginTop="@dimen/dimen_28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_upload"
                android:layout_width="@dimen/dimen_180"
                android:layout_height="@dimen/dimen_180"
                fresco:placeholderImage="@mipmap/ic_nodata" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单号：MO20165489375342"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:text="下单："
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <!--<TextView-->
                <!--android:id="@+id/tv_appointment_time"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="预约：2016-11-11 11:11:11"-->
                <!--android:textColor="@color/font_color"-->
                <!--android:textSize="14sp" />-->
                <TextView
                    android:id="@+id/tv_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_24"
                    android:text="报修人:"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_13" />

                <TextView
                    android:id="@+id/tv_bug_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="类别："
                    android:textColor="@color/font_color"
                    android:textSize="14sp"
                    android:visibility="gone" />
                <!--<TextView-->
                <!--android:id="@+id/tv_phone_solve"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="电话解决："-->
                <!--android:textColor="@color/font_color"-->
                <!--android:textSize="14sp" />-->


            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/style_common_line_gray"
            android:layout_marginTop="@dimen/dimen_34" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_38"
            android:paddingRight="@dimen/dimen_22"
            android:paddingTop="@dimen/dimen_20">

            <LinearLayout
                android:id="@+id/ll_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_13"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_count_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/color_repair_fault_num"
                    android:textSize="@dimen/textSize_15"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_client_camera_text_back"
                    android:paddingBottom="@dimen/dimen_18"
                    android:paddingLeft="@dimen/dimen_32"
                    android:paddingRight="@dimen/dimen_32"
                    android:paddingTop="@dimen/dimen_18"
                    android:text="完工报告"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_12"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_do_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_client_camera_text_back_pressed"
                    android:paddingBottom="@dimen/dimen_18"
                    android:paddingLeft="@dimen/dimen_32"
                    android:paddingRight="@dimen/dimen_32"
                    android:paddingTop="@dimen/dimen_18"
                    android:text="联系技师"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:id="@+id/tv_do_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_client_camera_text_back_pressed"
                    android:paddingBottom="@dimen/dimen_18"
                    android:paddingLeft="@dimen/dimen_32"
                    android:paddingRight="@dimen/dimen_32"
                    android:paddingTop="@dimen/dimen_18"
                    android:text="立即付款"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/textSize_12" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
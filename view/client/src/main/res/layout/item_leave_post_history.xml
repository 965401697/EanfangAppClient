<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_leave_post_history_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_38"
        android:text="@string/text_home_lead_news"
        android:textColor="@color/color_client_neworder"
        android:textSize="13sp"
        android:layout_marginTop="@dimen/dimen_32"
        app:layout_goneMarginLeft="@dimen/dimen_40"
        app:layout_constraintBottom_toTopOf="@id/item_leave_post_history_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_leave_post_history_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_home_lead_news"
        android:textColor="@color/color_client_neworder"
        android:textSize="13sp"
        android:layout_marginTop="@dimen/dimen_24"
        app:layout_constraintBottom_toTopOf="@id/item_leave_post_history_date"
        app:layout_constraintLeft_toLeftOf="@id/item_leave_post_history_name"
        app:layout_constraintTop_toBottomOf="@id/item_leave_post_history_name" />

    <TextView
        android:id="@+id/item_leave_post_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_home_lead_news"
        android:textColor="@color/color_client_neworder"
        android:textSize="13sp"
        android:layout_marginTop="@dimen/dimen_24"
        android:layout_marginBottom="@dimen/dimen_32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/item_leave_post_history_name"
        app:layout_constraintTop_toBottomOf="@id/item_leave_post_history_position" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_28"
        android:src="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_leave_post_history_rz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_72"
        android:src="@drawable/selector_leave_post_history_do"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        android:background="@color/color_new_line"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:paddingBottom="@dimen/dimen_24"
    android:paddingLeft="@dimen/dimen_36"
    android:paddingRight="@dimen/dimen_24"
    android:paddingTop="@dimen/dimen_24">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.eanfang.base.widget.customview.CircleImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:src="@mipmap/ic_nodata"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_24"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_15" />

                <TextView
                    android:id="@+id/tv_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_14"
                    android:text="(好友)"
                    android:textColor="@color/color_bottom"
                    android:textSize="@dimen/textSize_12"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_certifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:src="@mipmap/ic_security_ceritifi"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_14"
                android:textColor="@color/color_bottom"
                android:textSize="@dimen/textSize_13" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_isFocus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_security_unfoucs_back"
        android:paddingBottom="@dimen/dimen_12"
        android:paddingLeft="@dimen/dimen_26"
        android:paddingRight="@dimen/dimen_26"
        android:paddingTop="@dimen/dimen_12"
        android:text="+关注"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textSize_12"
        android:visibility="visible" />
</RelativeLayout>
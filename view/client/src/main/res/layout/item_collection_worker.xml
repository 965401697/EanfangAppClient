<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_30"
    android:paddingTop="@dimen/dimen_20"
    android:paddingBottom="@dimen/dimen_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dimen_140"
            android:layout_height="@dimen/dimen_140"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_nodata" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_32"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_client_neworder"
                    android:textSize="@dimen/textSize_17" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_14"
                    android:src="@drawable/icon_worker_level" />

                <TextView
                    android:id="@+id/tv_workTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_18"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textSize_12" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_auth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:background="@drawable/shape_home_company_rz_type1"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingTop="@dimen/dimen_10"
                        android:paddingRight="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_10"
                        android:text="认证"
                        android:textColor="@color/color_home_company_rz1"
                        android:textSize="@dimen/textSize_11" />

                    <TextView
                        android:id="@+id/tv_train"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:background="@drawable/shape_home_company_rz_type1"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingTop="@dimen/dimen_10"
                        android:paddingRight="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_10"
                        android:text="培训"
                        android:textColor="@color/color_home_company_rz1"
                        android:textSize="@dimen/textSize_11" />

                    <TextView
                        android:id="@+id/tv_qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:background="@drawable/shape_home_company_rz_type1"
                        android:paddingLeft="@dimen/dimen_16"
                        android:paddingTop="@dimen/dimen_10"
                        android:paddingRight="@dimen/dimen_16"
                        android:paddingBottom="@dimen/dimen_10"
                        android:text="资质"
                        android:textColor="@color/color_home_company_rz1"
                        android:textSize="@dimen/textSize_11" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:textColor="@color/color_client_neworder"
                android:textSize="@dimen/textSize_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修："
                    android:textColor="@color/roll_content"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:id="@+id/tv_repair_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textColor="@color/color_home_company_rz1"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_6"
                    android:text="例"
                    android:textColor="@color/roll_content"
                    android:textSize="@dimen/textSize_8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:text="施工："
                    android:textColor="@color/roll_content"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:id="@+id/tv_construction_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="456"
                    android:textColor="@color/color_home_company_rz1"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_6"
                    android:text="例"
                    android:textColor="@color/roll_content"
                    android:textSize="@dimen/textSize_8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_30"
                    android:text="评价："
                    android:textColor="@color/roll_content"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:id="@+id/tv_evaluate_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="789"
                    android:textColor="@color/color_home_company_rz1"
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_6"
                    android:text="例"
                    android:textColor="@color/roll_content"
                    android:textSize="@dimen/textSize_8" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="口碑"
                        android:textColor="@color/roll_content"
                        android:textSize="@dimen/textSize_11" />

                    <TextView
                        android:id="@+id/tv_koubei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_11" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好评率"
                        android:textColor="@color/roll_content"
                        android:textSize="@dimen/textSize_11" />

                    <TextView
                        android:id="@+id/tv_haopinglv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_11" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已有"
                        android:textColor="@color/roll_content"
                        android:textSize="@dimen/textSize_12" />

                    <TextView
                        android:id="@+id/tv_consultation_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:text="7987"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSize_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:text="人咨询"
                        android:textColor="@color/roll_content"
                        android:textSize="@dimen/textSize_12" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_home_company_install"
                android:paddingStart="@dimen/dimen_30"
                android:paddingTop="@dimen/dimen_18"
                android:paddingRight="@dimen/dimen_30"
                android:paddingBottom="@dimen/dimen_18"
                android:text="我要装监控"
                android:textColor="@color/color_white"
                android:textSize="@dimen/textSize_12" />

            <TextView
                android:id="@+id/tv_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_18"
                android:background="@drawable/shape_bg_home_repair_commit"
                android:paddingStart="@dimen/dimen_30"
                android:paddingTop="@dimen/dimen_18"
                android:paddingRight="@dimen/dimen_30"
                android:paddingBottom="@dimen/dimen_18"
                android:text="我要修监控"
                android:textColor="@color/color_white"
                android:textSize="@dimen/textSize_12" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
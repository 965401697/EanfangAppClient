<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_home_leave_post"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_100"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_leave_post_home_count"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24"
        android:gravity="center"
        android:text="序号"
        android:textColor="@color/color_client_neworder"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_leave_post_type"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:gravity="center"
        android:text="类别"
        android:textColor="@color/color_client_neworder"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_leave_post_home_count"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_leave_post_date"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textColor="@color/color_client_neworder"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_leave_post_type"
        app:layout_constraintRight_toLeftOf="@id/item_leave_post_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="@dimen/dimen_120" />

    <TextView
        android:id="@+id/item_leave_post_name"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_38"
        android:drawablePadding="@dimen/dimen_24"
        android:gravity="center"
        android:text="名称"
        android:textColor="@color/color_client_neworder"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_leave_post_position"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_leave_post_position"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_60"
        android:layout_marginRight="@dimen/dimen_50"
        android:drawablePadding="@dimen/dimen_24"
        android:text="岗位位置"
        android:textSize="12sp"
        android:textColor="@color/color_client_neworder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_leave_post_position"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        android:background="@color/color_leave_post_check_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_200"
    android:background="@color/white">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_fault_desc"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="@dimen/dimen_120"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_40"
        android:src="@mipmap/ic_header"
        fresco:roundAsCircle="true" />


    <TextView
        android:id="@+id/tv_fault_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_fault_desc"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_toRightOf="@+id/iv_fault_desc"
        android:text="推荐专家"
        android:textColor="@color/roll_title"
        android:textSize="@dimen/textSize_14" />

    <TextView
        android:id="@+id/tv_fault_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蓝屏"
        android:layout_below="@id/tv_fault_title"
        android:layout_alignLeft="@id/tv_fault_title"
        android:layout_marginTop="@dimen/dimen_28"
        android:textColor="@color/color_bottom"
        android:textSize="@dimen/textSize_13" />


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        android:layout_alignParentBottom="true"
        android:background="@color/color_new_line" />
</RelativeLayout>
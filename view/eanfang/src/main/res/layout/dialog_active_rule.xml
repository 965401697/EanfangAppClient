<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_active"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F7F7F">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_56"
        android:layout_marginRight="@dimen/dimen_52"
        android:background="@drawable/bg_client_contact_create"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/dimen_26"
            android:layout_height="@dimen/dimen_26"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginRight="@dimen/dimen_24"
            android:src="@drawable/icon_close" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_56"
            android:text="活动规则"
            android:textColor="@color/bga_adapter_empty_view_msg_textColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_48"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_marginBottom="@dimen/dimen_54"
            android:lineSpacingExtra="@dimen/dimen_8"
            android:text="活动规则"
            android:textColor="@color/bga_adapter_empty_view_msg_textColor"
            android:textSize="13sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>